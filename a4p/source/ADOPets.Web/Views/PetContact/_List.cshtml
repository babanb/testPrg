@using Resources = ADOPets.Web.Resources.Wording
@model IEnumerable<ADOPets.Web.ViewModels.PetContact.IndexViewModel>
@using ADOPets.Web.Common.Extensions
@using ADOPets.Web.Common.Helpers

<div id="petcontactList">

    @Html.RenderSuccessMessage("petcontactSuccessMessage", TempData["SuccessMessage"])


    <table id="Table_petcontact" class="table table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr class="text-primary">
                <th width="5%">&nbsp;</th>
                <th>@Resources.PetContact_Index_FirstName</th>
                <th>@Resources.PetContact_Index_LastName</th>
                <th>@Resources.PetContact_Index_PhoneHome</th>
                <th>@Resources.PetContact_Index_Relationship</th>
                @if (UserHelper.CanDeletePet(ViewBag.PetId))
                {
                    if (ShareInfoHelper.IsSharedUser(ViewBag.PetId, ViewBag.UserId))
                    {
                        if (SMOHelper.CanEditPet(ViewBag.PetId))
                        {
                    <th>@Resources.PetContact_Index_Action</th>
                        }
                    }
                }
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (item.IsEmergencyContact == true)
                    {              <span class="label label-default" data-tooltip="tooltip" style="font-weight:400;" data-placement="top" title="@Resources.PetContact_Index_IsEmergencyContact">@Resources.PetContact_Index_EMR</span><br> }
                    else
                    { <span>&nbsp; </span>}
                </td>
                <td>
                    @item.FirstName
                </td>
                <td>
                    @item.LastName
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.PhoneHome))
                    { <text>@item.PhoneHome</text> }
                    else if (!string.IsNullOrEmpty(item.PhoneOffice))
                    { <text>@item.PhoneOffice</text> }
                    else if (!string.IsNullOrEmpty(item.PhoneCell))
                    { <text>@item.PhoneCell</text> }
                </td>
                <td>
                    @EnumHelper.GetResourceValueForEnumValue(item.Relationship)
                </td>

                @if (UserHelper.CanDeletePet(ViewBag.PetId))
                {
                    if (ShareInfoHelper.IsSharedUser(ViewBag.PetId, ViewBag.UserId))
                    {
                        if (SMOHelper.CanEditPet(ViewBag.PetId))
                        {
                            <td>
                                <a href="@Url.Action("Edit", "PetContact", new { petcontactId = item.Id })" class="btn btn-success btn-sm editPetContact" data-tooltip="tooltip" data-placement="top" title="@Resources.PetContact_Index_Edit"><i class="fa fa-pencil"></i></a>
                                <a href="@Url.Action("DeleteConfirm", "PetContact", new { petcontactId = item.Id, petId = ViewBag.PetId })" class="btn btn-warning btn-sm deletePetContact" data-tooltip="tooltip" data-placement="top" data-original-title="@Resources.PetContact_Index_Delete" aria-describedby="tooltip739263"><i class="fa fa-trash-o"></i></a>
                            </td>
                        }
                    }
                }
            </tr>
        }
    </table>
</div>

<script src="~/Scripts/customs/views/PetContact/List.js"></script>
