                    "sInfoFiltered": '@Resources.Shared_Layout_sInfoFiltered',
                    "sInfoPostFix": "",
                    "sLoadingRecords": '@Resources.Shared_Layout_sLoadingRecords',
                    "sZeroRecords": '@Resources.Shared_Layout_sZeroRecords',
                    "sEmptyTable": '@Resources.Shared_Layout_sEmptyTable',
                    "oPaginate": {
                        "sFirst": '@Resources.Shared_Layout_sFirst',
                        "sPrevious": '@Resources.Shared_Layout_sPrevious',
                        "sNext": '@Resources.Shared_Layout_sNext',
                        "sLast": '@Resources.Shared_Layout_sLast'
                    },
                    "oAria": {
                        "sSortAscending": '@Resources.Shared_Layout_sSortAscending',
                        "sSortDescending": '@Resources.Shared_Layout_sSortDescending'
                    }
                },
                "aoColumnDefs": [],
                "aaSorting": []
            };

            if (Colid != "null" || typeof Colid === 'undefined' || !Colid.length) {
                var sortColumns = [];
                $.each(Colid, function (index, value) {
                    var items = { "sType": '@Resources.Shared_Layout_sDateFormat', "aTargets": [value] };
                    sortColumns.push(items);
                });
                result.aoColumnDefs = sortColumns;
                }

                return result;
            }
