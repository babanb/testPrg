        function GetTranstaltionForDatatable(Colid) {
            var result = {

                "language": {
                    "sProcessing": '@Resources.Shared_Layout_sProcessing',
                    "sSearch": '@Resources.Shared_Layout_sSearch',
                    "sLengthMenu": '@Resources.Shared_Layout_sLengthMenu',
