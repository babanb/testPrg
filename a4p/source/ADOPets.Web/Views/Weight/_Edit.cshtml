@using Resources = ADOPets.Web.Resources.Wording
@model ADOPets.Web.ViewModels.Weight.EditViewModel
@using ADOPets.Web.Common.Extensions

<div class="modal-dialog">

    <div class="modal-content">

        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="WeightModalLabel">@Resources.Weight_Edit_Title</h4>
        </div>
        
        @Html.Hidden("LeftValueRange", Resources.Weight_Edit_LeftValueRange)
        @Html.Hidden("RightValueRange", Resources.Weight_Edit_RightValueRange)

        @using (Ajax.BeginForm("Edit", "Weight", new AjaxOptions
        {
            UpdateTargetId = "WeightSection",
            HttpMethod = "POST",
            InsertionMode = InsertionMode.Replace,
            OnSuccess = "CloseDialogWeight"
        }, new { @id = "editWeightForm" }))
        {
            @Html.AntiForgeryToken()

            <div class="modal-body">

                @Html.HiddenFor(model => model.PetId)
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.MeasureUnit)

                @Html.LabelRequiredFor(model => model.MeasureDate, new { @class = "control-label" })
                @Html.TextBoxFor(model => model.MeasureDate, new { @class = "form-control datepicker datepickerPast", placeholder = Resources.Weight_Edit_DatePlaceHolder, @Value = Model.MeasureDate.ToString("d") })
                @Html.ValidationMessageFor(model => model.MeasureDate)
                <br>

                @Html.LabelRequiredFor(model => model.LeftValue, new { @class = "control-label" })
                <div class="row">
                    <div class="col-md-6">
                        @Html.TextBoxFor(model => model.LeftValue, new { @class = "form-control" })
                        @Model.LeftValueUnit
                        @Html.ValidationMessageFor(model => model.LeftValue)
                    </div>
                    <div class="col-md-6">
                        @Html.TextBoxFor(model => model.RightValue, new { @class = "form-control" })
                        @Model.RightValueUnit
                        @Html.ValidationMessageFor(model => model.RightValue)
                    </div>
                </div>

                <div class="clearfix"></div>

            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">@Resources.Weight_Edit_SaveChanges</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">@Resources.Weight_Edit_Cancel</button>
            </div>
        }

    </div>
</div>

