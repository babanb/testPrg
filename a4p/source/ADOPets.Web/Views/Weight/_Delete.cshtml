@using Resources = ADOPets.Web.Resources.Wording
@model ADOPets.Web.ViewModels.Weight.DeleteViewModel

<div class="modal-dialog">

    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">@Resources.Weight_Delete_Title</h4>
        </div>

        <div class="modal-body">
            <div style="overflow-x: auto; height: auto; padding-right: 10px;">

                <h4 class="modal-title">@Resources.Weight_Delete_Message</h4>
                <br />

                <table width="100%" border="0" cellspacing="0" cellpadding="0">
                    <tr>
                        <td width="30%" align="right"><strong>@Html.LabelFor(model => model.MeasureDate, new { @class = "control-label" })</strong></td>
                        <td width="10%" align="center">:</td>
                        <td width="70%">@Model.MeasureDate.ToShortDateString()</td>
                    </tr>


                    <tr>
                        <td width="30%" align="right"><strong>@Html.LabelFor(model => model.Weight, new { @class = "control-label" })</strong></td>
                        <td width="10%" align="center">:</td>
                        <td width="70%">@Model.Weight</td>
                    </tr>
                </table>

            </div>
        </div>

        @using (Ajax.BeginForm("Delete", "Weight", new AjaxOptions
        {
            UpdateTargetId = "WeightSection",
            HttpMethod = "POST",
            InsertionMode = InsertionMode.Replace,
            OnSuccess = "CloseDialogWeight"
        }))
        {
            @Html.AntiForgeryToken()

            @Html.HiddenFor(m => m.PetId)
            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(model => model.MeasureUnit)
            
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">@Resources.Weight_Delete_SaveChanges</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">@Resources.Weight_Delete_Cancel</button>
            </div>
        }

    </div>
</div>
