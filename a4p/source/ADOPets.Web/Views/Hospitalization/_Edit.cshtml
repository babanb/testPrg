@using Resources = ADOPets.Web.Resources.Wording
@model ADOPets.Web.ViewModels.Hospitalization.EditViewModel
@using ADOPets.Web.Common.Extensions

<div class="modal-dialog">

    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="myModalLabel">@Resources.Hospitalization_Edit_Title</h4>
        </div>
        @using (Ajax.BeginForm("Edit", "Hospitalization", new AjaxOptions
                                                   {
                                                       UpdateTargetId = "hospitalizationList",
                                                       HttpMethod = "POST",
                                                       InsertionMode = InsertionMode.Replace,
                                                       OnSuccess = "CloseDialogHospitalization"
                                                   }, new { @id = "editHospitalizationForm" }))
        {
            @Html.AntiForgeryToken()
            <div class="modal-body">
                <div style="overflow-x: auto; height: auto; padding-right: 10px;">

                    @Html.HiddenFor(model => model.Id)
                    @Html.HiddenFor(model => model.PetId)

                    @Html.LabelRequiredFor(model => model.HospitalName, new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.HospitalName, new { @class = "form-control", placeholder = Resources.Hospitalization_Edit_HospitalNamePlaceHolder })
                    @Html.ValidationMessageFor(model => model.HospitalName)

                    <br />

                    @Html.LabelRequiredFor(model => model.Reason, new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.Reason, new { @class = "form-control", placeholder = Resources.Hospitalization_Edit_ReasonPlaceHolder })
                    @Html.ValidationMessageFor(model => model.Reason)

                    <br />

                    @Html.LabelFor(model => model.AdmissionDate, new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.AdmissionDate, new { @class = "form-control datepicker datepickerCustomValidation", placeholder = Resources.Hospitalization_Edit_AdmissionDatePlaceHolder, @Value = Model.AdmissionDate.HasValue ? Model.AdmissionDate.Value.ToString("d") : string.Empty })

                    <br />

                    @Html.LabelFor(model => model.EndDate, new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.EndDate, new { @class = "form-control datepicker datepickerCustomValidation", placeholder = Resources.Hospitalization_Edit_EndDatePlaceHolder, @Value = Model.EndDate.HasValue ? Model.EndDate.Value.ToString("d") : string.Empty })

                    <br />

                    @Html.LabelFor(model => model.Comment, new { @class = "control-label" })
                    @Html.TextAreaFor(model => model.Comment, new { @class = "form-control", @rows = "3", placeholder = Resources.Hospitalization_Edit_CommentPlaceHolder })

                    <br />

                    @Html.CheckBoxFor(model => model.UrgentCareVisit)&nbsp;&nbsp;&nbsp;
                    @Html.LabelFor(model => model.UrgentCareVisit, new { @class = "control-label" })
                    


                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">@Resources.Hospitalization_Edit_SaveChanges</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">@Resources.Hospitalization_Edit_Cancel</button>
            </div>
        }
    </div>
</div>

<script src="~/Scripts/customs/views/Hospitalization/Form.js"></script>
