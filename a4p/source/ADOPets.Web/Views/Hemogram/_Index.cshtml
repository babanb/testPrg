@using Resources = ADOPets.Web.Resources.Wording
@model IEnumerable<ADOPets.Web.ViewModels.Hemogram.IndexViewModel>
@using ADOPets.Web.Common.Helpers
<ol class="breadcrumb mrbreadcrumb">
    <li>@Ajax.ActionLink(Resources.Hemogram_Index_MedicalRecord, "MedicalRecords", "Pet", new { id = ViewBag.PetId },
                new AjaxOptions { HttpMethod = "GET", InsertionMode = InsertionMode.Replace, UpdateTargetId = "medicalRecord" }) </li>
    <li>@Resources.Hemogram_Index_HealthMeasureTracker </li>
    <li>@Resources.Hemogram_Index_Hemogram</li>

    <li class="pull-right hideslash">
        <div id="showHideHemogramButtons">
            <a href="#" id="HemogramDataCurve" class="btn btn-sm btn-primary"><i class="fa fa-bar-chart-o"></i>@Resources.Hemogram_Index_Curve</a>
            @if (UserHelper.CanDeletePet(ViewBag.PetId))
            {
                if (ShareInfoHelper.IsSharedUser(ViewBag.PetId, ViewBag.UserId))
                {
                    if (SMOHelper.CanEditPet(ViewBag.PetId))
                    {
                <a href="@Url.Action("GetDownloadHealthMeasure", "Pet", new { petid = ViewBag.PetId })"  class="btn btn-warning btn-sm pull-right" style="margin-left:10px;"><i class="fa fa-print"></i>@Resources.Pet_MedicalRecord_Print</a>    
                <a href="@Url.Action("Add", "Hemogram", new { petId = ViewBag.PetId })" id="addHemogram" class="btn btn-sm btn-primary">
                    <i class="fa fa-plus-circle"></i>
                    <span>@Resources.Hemogram_Index_Add</span>
                </a>
                    }
                }
            }
        </div>
        <a href='#Hemogram' id="ShowHemogramTable" data-toggle="pill" style="display: none;" class="btn btn-sm btn-primary"><i class="fa fa-table"></i>@Resources.Hemogram_Index_DataButton</a>
    </li>
    <div class="clearfix"></div>
</ol>

@{ Html.RenderPartial("~/Views/Hemogram/_List.cshtml"); }


<div id="addHemogramModal" class="modal fade" tabindex="-1" role="dialog"></div>
<div id="editHemogramModal" class="modal fade" tabindex="-1" role="dialog"></div>
<div id="deleteHemogramModal" class="modal fade" tabindex="-1" role="dialog"></div>
<script src="~/Scripts/customs/views/Hemogram/Index.js"></script>
