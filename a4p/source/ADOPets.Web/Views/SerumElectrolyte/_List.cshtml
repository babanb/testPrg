@using ADOPets.Web.Common.Helpers
@using Resources = ADOPets.Web.Resources.Wording
@model IEnumerable<ADOPets.Web.ViewModels.SerumElectrolyte.IndexViewModel>
@using ADOPets.Web.Common.Extensions
@using Model
@using ADOPets.Web.Common.Helpers
<div id="serumelectrolyteList" class="table-responsive">

    @Html.RenderSuccessMessage("serumelectrolyteSuccessMessage", TempData["SuccessMessage"])
    <div id="SerumElectrolyteTable">
        <table id="Table_SerumElectrolyte" class="table table-striped table-bordered">
            <thead>
                <tr class="text-primary">
                    <th>@Resources.SerumElectrolyte_Index_Date</th>
                    <th>@Resources.SerumElectrolyte_Index_SerumElectrolyte</th>

                    @if (UserHelper.CanDeletePet(ViewBag.PetId))
                    {
                        if (ShareInfoHelper.IsSharedUser(ViewBag.PetId, ViewBag.UserId))
                        {
                            if (SMOHelper.CanEditPet(ViewBag.PetId))
                            {
                        <th>@Resources.SerumElectrolyte_Index_Action</th>
                            }
                        }
                    }
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MeasureDate.ToShortDateString()</td>
                        <td>@item.Value</td>

                        @if (UserHelper.CanDeletePet(ViewBag.PetId))
                        {
                            if (ShareInfoHelper.IsSharedUser(ViewBag.PetId, ViewBag.UserId))
                            {
                                if (SMOHelper.CanEditPet(ViewBag.PetId))
                                {
                            <td>
                                <a href="@Url.Action("Edit", "SerumElectrolyte", new { measureId = item.Id })" class="editSerumElectrolyte btn btn-success btn-sm" data-tooltip="tooltip" data-placement="top" 
                          data-original-title="@Resources.SerumElectrolyte_Index_Edit"><i class="fa fa-pencil"></i></a>
                                <a href="@Url.Action("DeleteConfirm", "SerumElectrolyte", new { measureId = item.Id })" class="deleteSerumElectrolyte btn btn-warning btn-sm" data-tooltip="tooltip" data-placement="top" 
                          data-original-title="@Resources.SerumElectrolyte_Index_Delete"><i class="fa fa-trash-o"></i></a>
                            </td>
                                }
                            }
                        }
                    </tr>  
                }

            </tbody>
        </table>

    </div>

    <div id="SerumElectrolyteCurve" style="display: none;">
        <div id="SerumElectrolytecontainer" style="min-width: 310px; width: 100%; height: 400px;"></div>
    </div>

    @{
        var header = string.Format("{0} ({1})", Resources.SerumElectrolyte_Index_Title, EnumHelper.GetResourceValueForEnumValue(HealthMeasureUnitEnum.GramLiter));
        var YAxis = Model.OrderBy(i => i.MeasureDate).Select(w => w.SerumElectrolyteValue).ToArray();
        var xAxis = Model.OrderBy(i => i.MeasureDate).Select(w => w.MeasureDate.ToShortDateString()).ToArray();
    }

    <script type="text/javascript">
        function createSerumElectrolyteChart() {
            var y;

            var x = @Html.Raw(Json.Encode(xAxis))

         y = @Html.Raw(Json.Encode(YAxis))

            $('#SerumElectrolytecontainer').highcharts({
                title: {
                    text: '@header',
                    useHTML: true,
                    x: -20 //center
                },
                xAxis: {
                    title: {
                        text: '@Resources.SerumElectrolyte_Index_Date'
                    },
                    categories: x,
                    labels: {
                        rotation: -45
                    }
                },
                yAxis: {
                    title: {
                        text: '@Resources.SerumElectrolyte_Index_Title',
                        useHTML: true
                    },
                    plotLines: [{
                        value: 0,
                        width: 1,
                        color: '#808080'
                    }]
                },
                plotOptions: {
                    area: {
                        fillColor: {
                            linearGradient: { x1: 0, y1: 0, x2: 0, y2: 1 },
                            stops: [
                                [0, Highcharts.getOptions().colors[0]],
                                [1, Highcharts.Color(Highcharts.getOptions().colors[0]).setOpacity(0).get('rgba')]
                            ]
                        },
                        marker: {
                            radius: 2
                        },
                        lineWidth: 2,
                        states: {
                            hover: {
                                lineWidth: 2
                            }
                        },
                        threshold: null
                    },
                    series: {
                        animation: {
                            duration: 2500
                        }
                    }
                },
                tooltip: {
                    valueSuffix: ' @EnumHelper.GetResourceValueForEnumValue(HealthMeasureUnitEnum.GramLiter)'
                },
                legend: {
                    layout: 'vertical',
                    align: 'right',
                    verticalAlign: 'middle',
                    borderWidth: 0
                },
                series: [{
                    type: 'area',
                    name: '@Resources.SerumElectrolyte_Index_SerumElectrolyte',
                    data: y
                }]
            });
        }
    </script>
</div>
<script src="~/Scripts/customs/views/SerumElectrolyte/List.js"></script>
