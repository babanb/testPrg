@using Resources = ADOPets.Web.Resources.Wording
@model IEnumerable<ADOPets.Web.ViewModels.SerumElectrolyte.IndexViewModel>
@using ADOPets.Web.Common.Helpers
<ol class="breadcrumb mrbreadcrumb">

    <li>@Ajax.ActionLink(Resources.SerumElectrolyte_Index_MedicalRecord, "MedicalRecords", "Pet", new { id = ViewBag.PetId },
                new AjaxOptions { HttpMethod = "GET", InsertionMode = InsertionMode.Replace, UpdateTargetId = "medicalRecord" }) </li>
    <li>@Resources.SerumElectrolyte_Index_HealthMeasureTracker</li>
    <li>@Resources.SerumElectrolyte_Index_SerumElectrolyte</li>
    <li class="pull-right hideslash">
        <div id="showHideSerumElectrolyteButtons">
            <a href="#" id="SerumElectrolyteDataCurve" class="btn btn-primary btn-sm"><i class="fa fa-bar-chart-o"></i>@Resources.SerumElectrolyte_Index_Curve</a>
             @if (UserHelper.CanDeletePet(ViewBag.PetId))
             {
                 if (ShareInfoHelper.IsSharedUser(ViewBag.PetId, ViewBag.UserId))
                 {
                     if (SMOHelper.CanEditPet(ViewBag.PetId))
                     {
                <a href="@Url.Action("GetDownloadHealthMeasure", "Pet", new { petid = ViewBag.PetId })"  class="btn btn-warning btn-sm pull-right" style="margin-left:10px;"><i class="fa fa-print"></i>@Resources.Pet_MedicalRecord_Print</a>    
                <a href="@Url.Action("Add", "SerumElectrolyte", new { petId = ViewBag.PetId })" id="addSerumElectrolyte"    class="btn btn-primary btn-sm">
                    <i class="fa fa-plus-circle"></i>
                    <span>@Resources.SerumElectrolyte_Index_Add</span>
                </a>
                     }
                 }
             }
        </div>
        <a href='#SerumElectrolyte' id="ShowSerumElectrolyteTable" data-toggle="pill" style="display: none;" class="btn btn-primary btn-sm"><i class="fa fa-table"></i>@Resources.SerumElectrolyte_Index_DataButton</a>
    </li>
    <div class="clearfix"></div>
</ol>


@{ Html.RenderPartial("~/Views/SerumElectrolyte/_List.cshtml"); }


<div id="addSerumElectrolyteModal" class="modal fade" tabindex="-1" role="dialog"></div>
<div id="editSerumElectrolyteModal" class="modal fade" tabindex="-1" role="dialog"></div>
<div id="deleteSerumElectrolyteModal" class="modal fade" tabindex="-1" role="dialog"></div>

<script src="~/Scripts/customs/views/SerumElectrolyte/Index.js"></script>
