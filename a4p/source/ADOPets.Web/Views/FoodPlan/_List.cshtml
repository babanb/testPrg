@using Resources = ADOPets.Web.Resources.Wording
@model IEnumerable<ADOPets.Web.ViewModels.FoodPlan.IndexViewModel>
@using ADOPets.Web.Common.Extensions
@using ADOPets.Web.Common.Helpers

<div id="foodplanList" class="">

    @Html.RenderSuccessMessage("foodplanSuccessMessage", TempData["SuccessMessage"])

    <table id="Table_foodplan" class="table table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th width="45%">@Resources.FoodPlan_Index_FoodName</th>
                <th width="20%">@Resources.FoodPlan_Index_RecomendedFood</th>
                <th width="20%">@Resources.FoodPlan_Index_ForbidenFood</th>
                @if (UserHelper.CanDeletePet(ViewBag.PetId))
                {
                    if (ShareInfoHelper.IsSharedUser(ViewBag.PetId, ViewBag.UserId))
                    {
                        if (SMOHelper.CanEditPet(ViewBag.PetId))
                        {
                    <th width="15%">@Resources.FoodPlan_Index_Action</th>
                        }
                    }
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.FoodName
                    </td>
                    <td>
                        @if (item.RecomendedFood == true)
                        {@Resources.FoodPlan_Index_Yes }
                        else
                        {@Resources.FoodPlan_Index_No}
                    </td>
                    <td>
                        @if (item.ForbidenFood == true)
                        {@Resources.FoodPlan_Index_Yes }
                        else
                        {@Resources.FoodPlan_Index_No}
                    </td>
                    @if (UserHelper.CanDeletePet(ViewBag.PetId))
                    {
                        if (ShareInfoHelper.IsSharedUser(ViewBag.PetId, ViewBag.UserId))
                        {
                            if (SMOHelper.CanEditPet(ViewBag.PetId))
                            {
                        <td>
                            <a href="@Url.Action("Edit", "FoodPlan", new { foodplanId = item.Id })" class="btn btn-success btn-sm editFoodPlan" data-tooltip="tooltip" data-placement="top" data-original-title="@Resources.FoodPlan_Index_Edit"><i class="fa fa-pencil"></i></a>
                            <a href="@Url.Action("DeleteConfirm", "FoodPlan", new { foodplanId = item.Id, petId = ViewBag.PetId })" class="btn btn-warning btn-sm deleteFoodPlan" data-tooltip="tooltip" data-placement="top" data-original-title="@Resources.FoodPlan_Index_Delete" aria-describedby="tooltip992278"><i class="fa fa-trash-o"></i></a>
                        </td>
                            }
                        }
                    }
                </tr>
            }
        </tbody>
    </table>

</div>

<script src="~/Scripts/customs/views/FoodPlan/List.js"></script>
