@using Resources = ADOPets.Web.Resources.Wording

@{
    ViewBag.Title = Resources.Link_TrainersLink_Title;
}

<div id="pageTitle">
    <div class="row">
        <div class="col-md-12">
            <h1>@Resources.Link_TrainersLink_Title</h1>
        </div>
    </div>
</div>
<div id="mainContainer">
    <div id="hiderightsidebar">
        <img src="@Url.Content("~/Content/images/hide-img.png")" width="22" height="34" alt=""/>
    </div>
    <div id="showrightsidebar">
        <img src="@Url.Content("~/Content/images/show-img.png")" width="22" height="34" alt="" />
    </div>

    <div id="linksHead">
        @Resources.Link_TrainersLink_TrainersInfo
    </div>

    <div id="linksLogo">
        <a href="http://apdt.com/trainer-search/" data-toggle="modal" data-target="#confirmModal" rel="nofollow" target="_blank">
            <img src="@Url.Content("~/Content/images/apdt.jpg")" class="img-thumbnail" alt="apdt.com" /></a>

        <a href="http://www.animalbehaviorcollege.com/dog_trainer_search.asp" data-toggle="modal" data-target="#confirmModal" rel="nofollow" target="_blank">
            <img src="@Url.Content("~/Content/images/animalbehaviorcollege.jpg")" class="img-thumbnail" alt="www.animalbehaviorcollege.com" /></a>


        <a href="https://www.karenpryoracademy.com/find-a-trainer?source=hpsb" data-toggle="modal" data-target="#confirmModal" rel="nofollow" target="_blank">
            <img src="@Url.Content("~/Content/images/karenpryoracademy.jpg")" class="img-thumbnail" alt="www.karenpryoracademy.com " /></a>

    </div>

    <!-- Modal -->
    <div class="modal fade" id="confirmModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">@Resources.CloseButton</span></button>
                    <h4 class="modal-title" id="myModalLabel">@Resources.Link_TrainersLink_Confirmation</h4>
                </div>
                <div class="modal-body">
                    @Resources.Link_TrainersLink_ConfirmationInfo
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">@Resources.Link_TrainersLink_Close</button>
                    <button type="button" class="btn btn-primary" id="agreeBtn">@Resources.Link_TrainersLink_Agree</button>
                </div>
            </div>
        </div>
    </div>
</div>
