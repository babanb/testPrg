@using Resources = ADOPets.Web.Resources.Wording

@{
    ViewBag.Title = Resources.Link_OthersLink_Title;
}

<div id="pageTitle">
    <div class="row">
        <div class="col-md-12">
            <h1>@Resources.Link_OthersLink_Title</h1>
        </div>
    </div>
</div>
<div id="mainContainer">
    <div id="hiderightsidebar">
        <img src="@Url.Content("~/Content/images/hide-img.png")" width="22" height="34" alt=""/>
    </div>
    <div id="showrightsidebar">
        <img src="@Url.Content("~/Content/images/show-img.png")" width="22" height="34" alt="" />
    </div>

    <div id="linksHead">
        @Resources.Link_OthersLink_Other_Info
    </div>
    <h4 class="text-primary">Dog Parks</h4>
    <hr>

    <div id="linksLogo">
        <a href="http://www.scout.me/dog-parks--near--me" data-toggle="modal" data-target="#confirmModal" rel="nofollow" target="_blank">
            <img src="@Url.Content("~/Content/images/scout.jpg")" class="img-thumbnail" alt="www.scout.me" /></a>

        <a href="http://www.dogpark.com" data-toggle="modal" data-target="#confirmModal" rel="nofollow" target="_blank">
            <img src="@Url.Content("~/Content/images/dogpark.jpg")" class="img-thumbnail" alt="www.dogpark.com" /></a>

        <a href="http://www.nylabone.com/about/dog-park-locator/" data-toggle="modal" data-target="#confirmModal" rel="nofollow" target="_blank">
            <img src="@Url.Content("~/Content/images/nylabone.jpg")" class="img-thumbnail" alt="www.nylabone.com " /></a>

        <a href="http://www.doggeek.com/dog-parks/" data-toggle="modal" data-target="#confirmModal" rel="nofollow" target="_blank">
            <img src="@Url.Content("~/Content/images/doggeek.jpg")" class="img-thumbnail" alt="www.doggeek.com " /></a>

        <h4 class="text-primary">@Resources.Link_OthersLink_PetsFriendlyHoteAndResta</h4>
        <hr>

        <div id="linksLogo">
            <a href="http://www.gopetfriendly.com/" data-toggle="modal" data-target="#confirmModal" rel="nofollow" target="_blank">
                <img src="@Url.Content("~/Content/images/gopetfriendly.jpg")" class="img-thumbnail" alt="www.gopetfriendly.com" /></a>

            <a href="http://www.dogfriendly.com/server/travel/guides/rest/rest.html"
                data-toggle="modal" data-target="#confirmModal" rel="nofollow" target="_blank">
                <img src="@Url.Content("~/Content/images/dogfriendly.jpg")" class="img-thumbnail" alt="www.dogfriendly.com" /></a>

            <a href="http://www.bringfido.com/" data-toggle="modal" data-target="#confirmModal" rel="nofollow" target="_blank">
                <img src="@Url.Content("~/Content/images/bringfido.jpg")" class="img-thumbnail" alt="www.bringfido.com" /></a>

            <a href="http://petfriendlytravel.com/" data-toggle="modal" data-target="#confirmModal" rel="nofollow" target="_blank">
                <img src="@Url.Content("~/Content/images/petfriendlytravel.jpg")" class="img-thumbnail" alt="www.petfriendlytravel.com " /></a>

        </div>

        <!-- Modal -->
        <div class="modal fade" id="confirmModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">@Resources.CloseButton</span></button>
                        <h4 class="modal-title" id="myModalLabel">@Resources.Link_OthersLink_Confirmation</h4>
                    </div>
                    <div class="modal-body">
                        @Resources.Link_OthersLink_ConfirmationInfo
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">@Resources.Link_OthersLink_Close</button>
                        <button type="button" class="btn btn-primary" id="agreeBtn">@Resources.Link_OthersLink_Agree</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
