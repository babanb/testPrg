@using Resources = ADOPets.Web.Resources.Wording
@model ADOPets.Web.ViewModels.VideoGallery.AddViewModel
@using ADOPets.Web.Common.Extensions
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
           
            <button type="button" class="close" data-dismiss="modal" id="btnClose"><span aria-hidden="true">&times;</span><span class="sr-only">@Resources.CloseButton</span></button>
            <h4 class="modal-title" id="myModalLabel">@Resources.Gallery_Add_VideoTitle</h4>
        </div>
        @using (Html.BeginForm("AddVideo", "VideoGallery", new { petId = Model.PetId }, FormMethod.Post, new { enctype = "multipart/form-data", @id = "addVideoGalleryForm", @class = "form-horizontal defaultForm", @role = "form" }))
        {         
            
            @Html.AntiForgeryToken()
            @Html.Hidden("hdnInvalidVideotype", @Resources.Gallery_Add_VideoValidation)
            <div class="modal-body">
                @Html.HiddenFor(model => model.PetId)

                <div class="form-group">
                    @Html.LabelRequiredFor(model => model.Title, new { @class = "col-sm-4 control-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.Title, new { @class = "form-control", @id="TitleId", placeholder = Resources.Gallery_Add_TitlePlaceHolder })
                        @Html.ValidationMessageFor(model => model.Title)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelRequiredFor(model => model.VideoURL, new { @class = "col-sm-4 control-label" })
                    <div class="col-sm-8">
                        
                       <input class="btn btn-success" type="button" value="Upload" id="uploadBtn">
                        @Html.TextBoxFor(model=>model.VideoURL,new {@type="text",@id="filename",@readonly="readonly",@class="myInput"})
                        
                        @Html.TextBoxFor(model => model.VideoURL, new { @type = "file",@style = "width:0;height:0;visibility:hidden;", @id="uploadfilehidden", @accept="video/*", @onchange="setfilename(this.value);", placeholder = Resources.Gallery_Add_VideoURLPlaceHolder })
                        @Html.ValidationMessageFor(model => model.VideoURL)
                       
                      
                    </div>
                </div>
                 <div class="progress progress-striped" id="ProgressId" hidden="hidden" >
                     <div class="progress-bar progress-bar-success" hidden="hidden" id="ProgressBarId" >0%</div>
                     </div><div id="status"></div>
                 
               
                <div class="clearfix"></div>
                <script>

                    $("#uploadBtn").click(function (e) {
                        $("#uploadfilehidden").click();
                    });
                </script>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" id="btnCloseModel">@Resources.Gallery_Add_CloseButton</button>
                <button type="submit" class="btn btn-primary" id="btnSave">@Resources.Gallery_Add_SubmitButton</button>
               
            </div>
        }
    </div>
</div>

<script src="@Url.Content("~/Scripts/external/jquery.form.min.js")"></script>
<script src="@Url.Content("~/Scripts/customs/views/VideoGallery/Form.js")"></script>

