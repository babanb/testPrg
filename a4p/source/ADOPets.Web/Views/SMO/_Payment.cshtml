@using ADOPets.Web.Common.Extensions
@using ADOPets.Web.Common.Helpers
@using Model

@model ADOPets.Web.ViewModels.Account.PaymentResultViewModel
@using Resources = ADOPets.Web.Resources.Wording;
<div class="row">
    <div class="col-lg-12">
        <div id="thankU">
            @if (Model.OrderNumber != null)
            {
                if (Model.Success)
                {
                <div class="row">
                    <div>
                        <h2 style="margin-left: 30px;">@Resources.Smo_Add_ThankYou</h2>
                        <h5 class="text-warning" style="margin-left: 30px; line-height: 20px; margin-right: 20px;">
                            @Resources.Smo_Add_SuccessfullMessage
                            <br />
                            @Resources.Smo_Add_EmailMsg
                            <br>
                            @Resources.Smo_Add_VetEmailMsg</h5>
                        <hr>
                        <table width="100%" border="0" cellspacing="0" cellpadding="0" style="margin-left: 30px; margin-right: 20px;">
                            <tr>
                                <td align="left" valign="top"><strong>@Html.Label(Resources.Smo_Add_Product)  :</strong></td>
                                <td align="center" valign="top" style="padding-left: 10px; padding-right: 10px;"></td>
                                <td valign="top">@Resources.Smo_Add_SecondOpinion</td>
                            </tr>
                            <tr>
                                <td align="left" valign="top"><strong>@Html.LabelFor(m => m.SMOID)  :</strong></td>
                                <td align="center" valign="top" style="padding-left: 10px; padding-right: 10px;"></td>
                                <td valign="top">@Model.SMOID</td>
                            </tr>
                            <tr>
                                <td align="left" valign="top"><strong>@Html.LabelFor(m => m.Price)  :</strong></td>
                                <td align="center" valign="top" style="padding-left: 10px; padding-right: 10px;"></td>
                                <td valign="top">@Resources.Smo_Add_DollarSign@Model.Price</td>
                            </tr>
                            <tr>
                                <td align="left" valign="top"><strong>@Html.LabelFor(m => m.TransactionDate)  :</strong></td>
                                <td align="center" valign="top" style="padding-left: 10px; padding-right: 10px;"></td>
                                <td valign="top">@Model.TransactionDate</td>
                            </tr>
                            <tr>
                                <td align="left" valign="top"><strong>@Html.LabelFor(m => m.OrderNumber)  :</strong></td>
                                <td align="center" valign="top" style="padding-left: 10px; padding-right: 10px;"></td>
                                <td valign="top">@Model.OrderNumber</td>
                            </tr>
                            <tr>
                                <td align="left" valign="top"><strong>@Html.Label(Resources.Smo_Add_Message)   :</strong></td>
                                <td align="center" valign="top" style="padding-left: 10px; padding-right: 10px;"></td>
                                <td valign="top">@Model.TransactionResult</td>
                            </tr>
                            <tr>
                                <td align="left" valign="top"></td>
                                <td align="center" valign="top" style="padding-left: 10px; padding-right: 10px;"></td>
                                <td valign="top">
                                    <br>
                                    <a href="@Url.Action("Index", "SMO")" class="btn btn-success">@Resources.Smo_Add_BackToIndex <i class="fa fa-long-arrow-right"></i></a>
                                    <br>
                                    <br>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
                }
                else
                {
                <div class="row">
                    <center>
                    <div class="col-md-8">
                        <h4 class="text-warning">@Model.ErrorMsg</h4>
                        <h4 class="text-warning">@Model.TransactionResult</h4>
                        <a href="@Url.Action("Index", "SMO")" class="btn btn-success">@Resources.Smo_Add_TryAgain <i class="fa fa-long-arrow-right"></i></a>
                    </div></center>
                </div>
                }
            }
            else
            {
                <div>
                    @Resources.Smo_Add_SuccessfullMessage
                </div>
                <div class="row">
                    <center>
                    <div class="col-md-8">
                        <h4 class="text-warning">@Model.ErrorMsg</h4>
                        <h4 class="text-warning">@Model.TransactionResult</h4>
                        <a href="@Url.Action("Index", "SMO")" class="btn btn-success">@Resources.Smo_Add_BackToIndex <i class="fa fa-long-arrow-right"></i></a>
                    </div></center>
                </div>
            }
        </div>
    </div>
</div>
