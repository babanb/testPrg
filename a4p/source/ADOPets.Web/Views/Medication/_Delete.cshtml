@using Resources = ADOPets.Web.Resources.Wording
@model ADOPets.Web.ViewModels.Medication.DeleteViewModel
@using ADOPets.Web.Common.Extensions

<div class="modal-dialog">

    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">@Resources.Medication_Delete_Message</h4>
        </div>

        <div class="modal-body">
            <div style="overflow-x: auto; height: auto; padding-right: 10px;">
                
                     <table width="100%" border="0" cellspacing="0" cellpadding="0">
                        <tr>
                            <td width="30%" align="right"><strong>@Html.LabelFor(model => model.MedicationName, new { @class = "control-label" })</strong></td>
                            <td width="10%" align="center">:</td>
                            <td width="70%">@Model.MedicationName</td>
                        </tr>

                        <tr>
                            <td width="30%" align="right"><strong> @Html.LabelFor(model => model.Reason, new { @class = "control-label" })</strong></td>
                            <td width="10%" align="center">:</td>
                            <td width="70%">@Model.Reason</td>
                        </tr>

                        <tr>
                            <td width="30%" align="right"><strong>@Html.LabelFor(model => model.VisitDate, new { @class = "control-label" })</strong></td>
                            <td width="10%" align="center">:</td>
                            <td width="70%">@Model.VisitDate.ToShortDateString()</td>
                        </tr>

                         <tr>
                            <td width="30%" align="right"><strong>@Html.LabelFor(model => model.Status, new { @class = "control-label" })</strong></td>
                            <td width="10%" align="center">:</td>
                            <td width="70%">@Html.EnumDisplayFor(model => model.Status)</td>
                        </tr>

                         <tr>
                            <td width="30%" align="right"><strong>@Html.LabelFor(model => model.Duration, new { @class = "control-label" })</strong></td>
                            <td width="10%" align="center">:</td>
                            <td width="70%">@Model.Duration</td>
                        </tr>
                
                        <tr>
                            <td width="30%" align="right"><strong>@Html.LabelFor(model => model.HowOften, new { @class = "control-label" })</strong></td>
                            <td width="10%" align="center">:</td>
                            <td width="70%">@Model.HowOften</td>
                        </tr>    

                         <tr>
                            <td width="30%" align="right"><strong>@Html.LabelFor(model => model.Dosage, new { @class = "control-label" }):</strong></td>
                            <td width="10%" align="center">:</td>
                            <td width="70%">@Model.Dosage</td>
                        </tr>

                         <tr>
                            <td width="30%" align="right"><strong>@Html.LabelFor(model => model.Route, new { @class = "control-label" }):</strong></td>
                            <td width="10%" align="center">:</td>
                            <td width="70%">@Model.Route</td>
                        </tr>

                         <tr>
                            <td width="30%" align="right"><strong>@Html.LabelFor(model => model.Veterinarian, new { @class = "control-label" }):</strong></td>
                            <td width="10%" align="center">:</td>
                            <td width="70%">@Model.Veterinarian</td>
                        </tr>

                         <tr>
                            <td width="30%" align="right"><strong>@Html.LabelFor(model => model.Comment, new { @class = "control-label" }):</strong></td>
                            <td width="10%" align="center">:</td>
                            <td width="70%">@Html.Raw("<pre>" + Model.Comment + "</pre>")</td>
                        </tr>

                         <tr>
                            <td width="30%" align="right"><strong>@Html.LabelFor(model => model.SendReminderMail, new { @class = "control-label" }):</strong></td>
                            <td width="10%" align="center">:</td>
                            <td width="70%">@Model.SendReminderMail</td>
                        </tr>
                    </table>
            </div>
        </div>

        @using (Ajax.BeginForm("Delete", "Medication", new AjaxOptions
        {
            UpdateTargetId = "medicationList",
            HttpMethod = "POST",
            InsertionMode = InsertionMode.Replace,
            OnSuccess = "CloseDialogMedication"
        }))
        {
            @Html.AntiForgeryToken()

            @Html.HiddenFor(m => m.PetId)
            @Html.HiddenFor(m => m.Id)
            
            <div class="modal-footer">
                <button type="submit" class="btn btn-warning">@Resources.Medication_Delete_SaveChanges</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">@Resources.Medication_Delete_Cancel</button>
            </div>
        }

    </div>
</div>
