@using Resources = ADOPets.Web.Resources.Wording
@model ADOPets.Web.ViewModels.Medication.AddViewModel
@using ADOPets.Web.Common.Extensions

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="myModalLabel">@Resources.Medication_Add_Title</h4>
        </div>
        @using (Ajax.BeginForm("Add", "Medication", new AjaxOptions
                                                   {
                                                       UpdateTargetId = "medicationList",
                                                       HttpMethod = "POST",
                                                       InsertionMode = InsertionMode.Replace,
                                                       OnSuccess = "CloseDialogMedication"
                                                   }, new { @id = "addMedicationForm", @class = "form-horizontal defaultForm", @role = "form" }))
        {

            @Html.AntiForgeryToken()
            <div class="modal-body">

                @Html.HiddenFor(model => model.PetId)
                <div class="form-group">
                    @Html.LabelRequiredFor(model => model.MedicationName, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.MedicationName, new { @class = "form-control", placeholder = Resources.Medication_Add_MedicationNamePlaceHolder })
                        @Html.ValidationMessageFor(model => model.MedicationName)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Reason, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.Reason, new { @class = "form-control", placeholder = Resources.Medication_Add_ReasonPlaceHolder })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Status, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-8">
                        @Html.EnumDropDownListFor(model => model.Status, Resources.Medication_Add_StatusPlaceHolder, htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelRequiredFor(model => model.VisitDate, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-8">
                        <div class="input-group date">
                            @Html.TextBoxFor(model => model.VisitDate, new { @class = "form-control datepicker", placeholder = Resources.Medication_Add_VisitDatePlaceHolder })
                            <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                        </div>
                        @Html.ValidationMessageFor(model => model.VisitDate)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelRequiredFor(model => model.Duration, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-5">
                        <div class="input-group">
                            @Html.TextBoxFor(model => model.Duration, new { @class = "form-control", placeholder = Resources.Medication_Add_DurationPlaceHolder, @Value = string.Empty })
                            <div class="input-group-addon">@Resources.Medication_Add_Days</div>
                        </div>
                        @Html.ValidationMessageFor(model => model.Duration)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.HowOften, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-5">
                        @Html.TextBoxFor(model => model.HowOften, new { @class = "form-control", placeholder = Resources.Medication_Add_HowOftenPlaceHolder })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Dosage, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-3">
                        @Html.TextBoxFor(model => model.Dosage, new { @class = "form-control", placeholder = Resources.Medication_Add_DosagePlaceHolder })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Route, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-3">
                        @Html.TextBoxFor(model => model.Route, new { @class = "form-control", placeholder = Resources.Medication_Add_RoutePlaceholder })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Veterinarian, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.Veterinarian, new { @class = "form-control", placeholder = Resources.Medication_Add_VeterinarianPlaceHolder })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Comment, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-8">
                        @Html.TextAreaFor(model => model.Comment, new { @class = "form-control", @rows = "3", placeholder = Resources.Medication_Add_CommentPlaceHolder })
                        @Html.ValidationMessageFor(model => model.Comment)
                    </div>
                </div>

                <div class="form-group" style="margin-bottom: 0;">
                    <div class="col-sm-offset-4 col-sm-8">
                        <div class="checkbox" style="padding-top: 0;">
                            @Html.CheckBoxFor(model => model.SendReminderMail)
                            @Html.Label(Resources.Medication_Add_SendReminderMail)
                            @Html.ValidationMessageFor(model => model.SendReminderMail)
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">@Resources.Medication_Add_SaveChanges</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">@Resources.Medication_Add_Cancel</button>
                </div>
            </div>
        }
    </div>
</div>






