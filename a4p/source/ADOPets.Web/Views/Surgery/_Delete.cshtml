@using Resources = ADOPets.Web.Resources.Wording
@model ADOPets.Web.ViewModels.Surgery.DeleteViewModel

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">@Resources.Surgery_Delete_Message</h4>
        </div>
        @using (Ajax.BeginForm("Delete", "Surgery", new AjaxOptions
        {
            UpdateTargetId = "surgeryList",
            HttpMethod = "POST",
            InsertionMode = InsertionMode.Replace,
            OnSuccess = "CloseDialogSurgery"
        }, new { @class = "form-horizontal defaultForm", @role = "form" }))
        {  
            @Html.AntiForgeryToken()
            <div class="modal-body">
                @Html.HiddenFor(m => m.PetId)
                @Html.HiddenFor(m => m.Id)



                <div class="columnfull" style="width: 80%;">
                    <div class="detailrow">
                        <div>@Resources.Surgery_Delete_Surgery</div>
                        <div class="colonspace">:</div>
                        <div>@Model.Surgery</div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="detailrow">
                        <div>@Resources.Surgery_Delete_DateofSurgery</div>
                        <div class="colonspace">:</div>
                        <div>
                            @if (Model.DateOfSurgery.HasValue)
                            {
                                @Model.DateOfSurgery.Value.ToShortDateString()
                            }
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="detailrow">
                        <div>@Resources.Surgery_Delete_Reason</div>
                        <div class="colonspace">:</div>
                        <div>@Model.Reason</div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="detailrow">
                        <div>@Resources.Surgery_Delete_Physician</div>
                        <div class="colonspace">:</div>
                        <div>@Model.Physician</div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="detailrow">
                        <div>@Resources.Surgery_Delete_Comments</div>
                        <div class="colonspace">:</div>
                        <div>@Html.Raw("<pre>" + Model.Comments + "</pre>")</div>
                        <div class="clearfix"></div>
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-warning">@Resources.Surgery_Delete_SaveChanges</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">@Resources.Surgery_Delete_Cancel</button>
            </div>
        }
    </div>
</div>
