@using ADOPets.Web.Common.Extensions
@using Resources = ADOPets.Web.Resources.Wording
@model ADOPets.Web.ViewModels.Pet.CardViewModel
@using Model
<div class="messageStyle">
    @{ Html.RenderPartial("_Alerts");       }
</div>
<div class="clearfix"></div>
<div class="column first">
    @Html.HiddenFor(model => model.PetName)
    @Html.HiddenFor(model => model.PetType)
    <div class="detailrow">
        <div>@Resources.Pet_Card_Breed</div>
        <div class="colonspace">:</div>
        <div>@Model.Breed</div>
        <div class="clearfix"></div>
    </div>
    <div class="detailrow">
        <div>@Resources.Pet_Card_SecondaryBreed</div>
        <div class="colonspace">:</div>
        <div>@Model.SecondaryBreed</div>
        <div class="clearfix"></div>
    </div>
    <div class="detailrow">
        <div>@Resources.Pet_Card_Pedigree </div>
        <div class="colonspace">:</div>
        <div>@Model.Pedigree</div>
        <div class="clearfix"></div>
    </div>

    <div class="detailrow">
        <div>@Resources.Pet_Card_BloodGroupType </div>
        <div class="colonspace">:</div>
        <div>@Html.EnumDisplayFor(m => m.BloodGroupType)</div>
        <div class="clearfix"></div>
    </div>

    <div class="detailrow">
        <div>@Resources.Pet_Card_ChipNumber </div>
        <div class="colonspace">:</div>
        <div>@Model.ChipNumber</div>
        <div class="clearfix"></div>
    </div>

    <div class="detailrow">
        <div>@Resources.Pet_Card_TattooNumber </div>
        <div class="colonspace">:</div>
        <div>@Model.TattooNumber</div>
        <div class="clearfix"></div>
    </div>

    <div class="detailrow">
        <div>@Resources.Pet_Card_Gender </div>
        <div class="colonspace">:</div>
        <div>@Html.EnumDisplayFor(m => m.Gender)</div>
        <div class="clearfix"></div>
    </div>
    <div class="detailrow">
        <div>@Resources.Pet_Card_AdoptionDate </div>
        <div class="colonspace">:</div>
        <div>
            @if (Model.AdoptionDate != null)
            {
                @Model.AdoptionDate.Value.ToShortDateString()
            }
        </div>
        <div class="clearfix"></div>
    </div>
</div>

<div class="column">

    <div class="detailrow">
        <div>@Resources.Pet_Card_BirthDate </div>
        <div class="colonspace">:</div>
        <div>@Model.BirthDate.ToShortDateString() </div>
        <div class="clearfix"></div>
    </div>

    <div class="detailrow">
        <div>@Resources.Pet_Card_PlaceOfBirth </div>
        <div class="colonspace">:</div>
        <div>@Model.PlaceOfBirth</div>
        <div class="clearfix"></div>
    </div>
    <div class="detailrow">
        <div>@Resources.Pet_Card_CountryOfBirth </div>
        <div class="colonspace">:</div>
        <div>@Html.EnumDisplayFor(m => m.CountryOfBirth)</div>
        <div class="clearfix"></div>
    </div>
    @if (ADOPets.Web.Common.Helpers.DomainHelper.GetDomain() != DomainTypeEnum.French)
    {
        <div class="detailrow">
            <div>@Resources.Pet_Card_StateOfBirth </div>
            <div class="colonspace">:</div>
            <div>@Html.EnumDisplayFor(m => m.StateOfBirth)</div>
            <div class="clearfix"></div>
        </div>
    }
    <div class="detailrow">
        <div>@Resources.Pet_Card_Zip </div>
        <div class="colonspace">:</div>
        <div>@Model.Zip</div>
        <div class="clearfix"></div>
    </div>

    <div class="detailrow">
        <div>@Resources.Pet_Card_HairType </div>
        <div class="colonspace">:</div>
        <div>
            @if (!string.IsNullOrEmpty(Model.HairTypeOther))
            {@Model.HairTypeOther }
            else
            {@Html.EnumDisplayFor(m => m.HairType)}
        </div>
        <div class="clearfix"></div>
    </div>

    <div class="detailrow">
        <div>@Resources.Pet_Card_Color </div>
        <div class="colonspace">:</div>
        <div>
            @if (!string.IsNullOrEmpty(Model.ColorOther))
            {@Model.ColorOther }
            else
            {@Html.EnumDisplayFor(m => m.Color)}
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="detailrow">
        <div>@Resources.Pet_Card_IsSterile </div>
        <div class="colonspace">:</div>
        <div>
            @if (Model.IsSterile == true)
            {<text>@Resources.Pet_Card_IsSterileYes</text> }
            else if (Model.IsSterile == false)
            {<text>@Resources.Pet_Card_IsSterileNo</text>}
            else
            {<text>@Resources.Pet_Card_IsSterileUnknown</text>}
        </div>
        <div class="clearfix"></div>
    </div>
</div>
