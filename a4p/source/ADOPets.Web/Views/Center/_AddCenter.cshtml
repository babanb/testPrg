@using Resources = ADOPets.Web.Resources.Wording
@using Model
@model ADOPets.Web.ViewModels.Center.AddViewModel
@using ADOPets.Web.Common.Extensions

<div id="pageTitle">
    <div class="row">
        <div class="col-md-6">
            <h1>@Resources.Center_Add_Title</h1>
        </div>
        <div class="col-md-6">
            <a href="@Url.Action("Index", "Center")" class="btn btn-primary pull-right"><i class="fa fa-angle-left"></i>@Resources.Center_Add_Back</a>
        </div>
    </div>
</div>
<div id="mainContainer">
   
    @using (Html.BeginForm("AddCenter", "Center", FormMethod.Post, new { @id = "AddCenterForm", @class = "form-horizontal defaultForm bv-form" }))
    {
        @Html.AntiForgeryToken()
        <div class="panel panel-info col-md-12 col-md-offset-0">
            <div class="panel-body">
                <div class="column">
                    <div class="form-group">
                        @Html.LabelRequiredFor(model =>model.CenterName, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(model => model.CenterName, new { @class = "form-control", @placeholder = Resources.Center_Add_Center_Name })
                            @Html.ValidationMessageFor(model => model.CenterName)
                        </div>
                    </div>
                </div>
                <div class="column">
                    <div class="form-group">
                        @Html.LabelRequiredFor(model => model.PromoCode, new { @class = "col-sm-6 control-label" })
                        <div class="col-sm-6">
                            @Html.TextBoxFor(model => model.PromoCode, new { @class = "form-control", @placeholder = Resources.PromoCode_Add_Promocode })
                            @Html.ValidationMessageFor(model => model.PromoCode)
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-6">
                <a id="cancelButton" href="@Url.Action("Index", "Center")" class="btn btn-warning btn-lg pull-right">@Resources.Account_SignUp_Cancel</a>
            </div>
            <div class="col-md-6">
                <button type="submit" class="btn btn-success btn-lg">@Resources.SaveChanges</button>
            </div>
        </div>
    }
</div>
<div class="clearfix"></div>
<script src="@Url.Content("~/Scripts/customs/views/Center/AddCenter.js")"></script>
