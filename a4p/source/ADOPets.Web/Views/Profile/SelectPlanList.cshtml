                    <td><i class="fa fa-times"></i></td>
                    }
                }
            </tr>
            <tr>
                <td>@Resources.Account_SignUp_IsHealthMeasureTracker<br>
                    @Resources.Account_SignUp_IsHMTDescription</td>
                @foreach (var item in Model)
                {
                    if (item.lstPlanData.IsHealthMeasureTracker)
