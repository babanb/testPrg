                }
            </tr>
            <tr>
                <td>@Resources.Account_SignUp_IsEC</td>
                @foreach (var item in Model)
                {
                    if (item.lstPlanData.IsEC)
                    {
                    <td><i class="fa fa-check-circle"></i></td>
                    }
                    else
                    {
                    <td><i class="fa fa-times"></i></td>
                    }
                }
            </tr>
            <tr id="trBasicPlan">
                <td></td>
                @if (Model != null && Model.Count() > 0)
                {
                    if (Model.FirstOrDefault().lstPlanData.ISBase)
                    {
                        if (Model.FirstOrDefault().lstPlanData.PlanType == "Premium")
                        {
                    <td><span class="text-success">@Resources.Account_Signup_Premium</span></td>
                    <td><span class="text-warning">@Resources.Account_Signup_Premium</span></td>
                        }
                        else
                        {
                    <td><span class="text-warning">@Resources.Account_Signup_Premium</span></td>
                        }
                    }
                    else
                    {
                        foreach (var item in Model)
                        {   <td><span class="text-success">@Resources.Account_Signup_Premium</span></td>}
                    }
                }
            </tr>
        </tbody>
    </table>
</div>

<script>
    $(".lnkChoosePlan").click(function () {
        $("#pricingPlans").find(".lnkChoosePlan").removeClass("btn-success").addClass("btn-default").find("i").removeClass("fa-check-circle").addClass("fa-circle-o");
        var planId = $(this).attr("data-planId");
        $(this).addClass("btn-success").find("i").addClass("fa-check-circle").removeClass("fa-circle-o");
        $("#hdnPlanId").val(planId);
        $("#EnableTrue").hide();
    });
</script>
