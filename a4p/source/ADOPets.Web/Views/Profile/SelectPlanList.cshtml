            </tr>
            <tr>
                <td>@Resources.Account_SignUp_IsMedicalDocument<br>
                    @Resources.Account_SignUp_IsMDDescription </td>
                @foreach (var item in Model)
                {
                    if (item.lstPlanData.IsMedicalDocument)
                    {
                    <td><i class="fa fa-check-circle"></i></td>
                    }
                    else
                    {
                    <td><i class="fa fa-times"></i></td>
                    }
                }
            </tr>
            <tr>
                <td>@Resources.Account_SignUp_IsMRA</td>
                @foreach (var item in Model)
                {
                    if (item.lstPlanData.IsMRA)
                    {
                    <td><i class="fa fa-check-circle"></i></td>
                    }
