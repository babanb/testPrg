@using Resources = ADOPets.Web.Resources.Wording;
@model ADOPets.Web.ViewModels.Profile.PlanUpgradeViewModel
@using ADOPets.Web.Common.Helpers
@using Model



<div id="pageTitle">
    <div class="row">
        <div class="col-md-6">
            <h1>@Resources.Profile_PlanUpgrade_Title</h1>
        </div>

        <div class="col-sm-6 text-right">
            <a href="@Url.Action("OwnerDetail", "Profile")" class="btn btn-primary">@Resources.Profile_OwnerDetail_MyPlan</a>
        </div>
    </div>
</div>
<div id="mainContainer">
    <div id="hiderightsidebar">
        <img src="../Content/images/hide-img.png" width="22" height="34" alt="" />
    </div>
    <div id="showrightsidebar">
        <img src="../Content/images/show-img.png" width="22" height="34" alt="" />
    </div>

    <div id="mainContainerBox">

        @using (Ajax.BeginForm("PlanUpgrade", "Profile", new AjaxOptions
        {
            UpdateTargetId = "PlanBilling",
            HttpMethod = "POST",
            InsertionMode = InsertionMode.Replace
        }, new { @id = "UpgradePlanForm", @class = "form-horizontal" }))
        {
            @Html.HiddenFor(model => model.StartDate)
            @Html.HiddenFor(model => model.EndDate)
            <div>
                <div class="form-group">
                    <label for="" class="col-sm-3 control-label">@Resources.Profile_PlanDetail_Promocode</label>
                    <div class="col-sm-6">
                        <input type="text" id="txtPromoCode" class="form-control" placeholder="@Resources.PlansAndPromo_Add_PromocodePlaceholder">
                    </div>
                    <div class="col-sm-3 infoPopup" style="padding-left: 0;">
                        <button id="PlansByPromoCode" class="btn btn-primary">@Resources.Users_AddUser_Submit</button>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="">
                    <div class="col-sm-3"></div>
                    <div class="col-sm-6">
                        <label for="ValidPromoCode" id="PromocodeSuccessmsg" style="text-align: left; color: #008c00; font-weight: 400; display: none;">@Resources.Account_SignUp_ValidPromoCode</label>
                        <label for="InvalidPromoCode" id="PromocodeErrMsg" style="color: #a94442; padding-right: 30px; display: none;">@Resources.Account_SignUp_InvalidPromoCode</label>
                    </div>
                </div>
                <div class="alert alert-warning alert-dismissible fade in" role="alert" style="text-align: center" hidden="hidden" id="EnableTrue">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
                    <strong>@Resources.Account_signupWarning </strong>@Resources.Account_signupselectplan
                </div>
                <div class="clearfix"></div>
                <div id="dvPlanList">
                    @Html.Partial("SelectPlanList", Model.SelectPlan)
                </div>

                <div class="form-group col-sm-5 col-sm-offset-1">
                    @*                        <a href="@Url.Action("OwnerDetail", "Profile")" class="btn btn-default" style="width: 100%;">@Resources.Account_SignUp_Cancel</a>*@
                </div>
                <div class="form-group col-sm-5">
                    <a href="javascript:void(0)" class="btn btn-primary" id="btn-next" style="width: 100%;">@Resources.Signup_NextStep</a>
                </div>
                <div class="clearfix"></div>

            </div>
            
        }
    </div>
</div>

<script src="@Url.Content("~/Scripts/customs/views/Profile/SelectPlan.js")"></script>
