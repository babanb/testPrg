@using Resources = ADOPets.Web.Resources.Wording
@using ADOPets.Web.Common.Extensions
@model IEnumerable<ADOPets.Web.ViewModels.Allergy.IndexViewModel>
@using ADOPets.Web.Common.Helpers

<div id="allergyList">

    @Html.RenderSuccessMessage("AllergySuccessMessage", TempData["SuccessMessage"])

    <table id="Table_Allergy" class="table table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th width="45%">@Resources.Allergy_Edit_Allergy</th>
                <th width="20%">@Resources.Allergy_Edit_StartDate</th>
                <th width="20%">@Resources.Allergy_Edit_Reaction</th>
                @if (UserHelper.CanDeletePet(ViewBag.PetId))
                {
                    if (ShareInfoHelper.IsSharedUser(ViewBag.PetId, ViewBag.UserId))
                    {
                        if (SMOHelper.CanEditPet(ViewBag.PetId))
                        {
                    <th width="15%">@Resources.Allergy_Edit_Action</th>
                        }
                    }
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Allergy
                    </td>
                    <td>
                        @if (item.StartDate.HasValue)
                        {
                            @item.StartDate.Value.ToShortDateString()
                        }
                    </td>
                    <td>
                        @item.Reaction
                    </td>
                    @if (UserHelper.CanDeletePet(ViewBag.PetId))
                    {
                        if (ShareInfoHelper.IsSharedUser(ViewBag.PetId, ViewBag.UserId))
                        {
                            if (SMOHelper.CanEditPet(ViewBag.PetId))
                            {
                        <td>
                            <a href="@Url.Action("Edit", "Allergy", new { allergyId = item.Id })" class="btn btn-success btn-sm editAllergy" data-tooltip="tooltip" data-placement="top"
                          data-original-title="@Resources.Allergy_Edit_Edit"><i class="fa fa-pencil"></i></a>

                            <a href="@Url.Action("DeleteConfirm", "Allergy", new { allergyId = item.Id, petId = ViewBag.PetId })" class="btn btn-warning btn-sm deleteAllergy" data-tooltip="tooltip" data-placement="top"
                                     data-original-title="@Resources.Allergy_Edit_Delete">
                                <i class="fa fa-trash-o"></i></a>
                        </td>
                            }
                        }
                    }
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="~/Scripts/customs/views/Allergy/List.js"></script>
