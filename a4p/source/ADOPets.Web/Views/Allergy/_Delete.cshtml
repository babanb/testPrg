@using Resources = ADOPets.Web.Resources.Wording
@model ADOPets.Web.ViewModels.Allergy.DeleteViewModel

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">@Resources.Allergy_Delete_Message</h4>
        </div>
        @using (Ajax.BeginForm("Delete", "Allergy", new AjaxOptions
        {
            UpdateTargetId = "allergyList",
            HttpMethod = "POST",
            InsertionMode = InsertionMode.Replace,
            OnSuccess = "CloseDialogAllergy"
        }, new { @class = "form-horizontal defaultForm", @role = "form" }))
        {
            @Html.AntiForgeryToken()

            @Html.HiddenFor(m => m.PetId)
            @Html.HiddenFor(m => m.Id)
            <div class="modal-body">
                <div class="columnfull" style="width: 80%;">
                    <div class="detailrow">
                        <div>@Resources.Allergy_Delete_Allergy</div>
                        <div class="colonspace">:</div>
                        <div>@Model.Allergy</div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="detailrow">
                        <div>@Resources.Allergy_Delete_StartDate</div>
                        <div class="colonspace">:</div>
                        <div>
                            @if (Model.StartDate.HasValue)
                            {
                                @Model.StartDate.Value.ToShortDateString()
                            }
                        </div>
                        <div class="clearfix"></div>
                    </div>

                    <div class="detailrow">
                        <div>@Resources.Allergy_Delete_EndDate</div>
                        <div class="colonspace">:</div>
                        <div>
                            @if (Model.EndDate.HasValue)
                            {
                                @Model.EndDate.Value.ToShortDateString()
                            }
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="detailrow">
                        <div>@Resources.Allergy_Delete_Reaction</div>
                        <div class="colonspace">:</div>
                        <div>@Model.Reaction</div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="detailrow">
                        <div>@Resources.Allergy_Delete_Comment</div>
                        <div class="colonspace">:</div>
                        <div>@Html.Raw("<pre>" + Model.Comment + "</pre>")</div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>      
            <div class="modal-footer">
                <button type="submit" class="btn btn-warning">@Resources.Allergy_Delete_SaveChanges</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">@Resources.Allergy_Delete_Cancel</button>
            </div>
        }
    </div>
</div>
