@using Resources = ADOPets.Web.Resources.Wording
@model IEnumerable<ADOPets.Web.ViewModels.Allergy.IndexViewModel>
@using ADOPets.Web.Common.Helpers

<ol class="breadcrumb mrbreadcrumb">
    <li>@Ajax.ActionLink(Resources.Allergy_Edit_MedicalRecord, "MedicalRecords", "Pet", new { id = ViewBag.PetId },
                new AjaxOptions { HttpMethod = "GET", InsertionMode = InsertionMode.Replace, UpdateTargetId = "medicalRecord" })</li>
    <li class="active">@Resources.Allergy_Edit_HealthHistory</li>
    <li class="active">@Resources.Allergy_Edit_Allergy</li>
    @if (UserHelper.CanDeletePet(ViewBag.PetId))
    {
        if (ShareInfoHelper.IsSharedUser(ViewBag.PetId, ViewBag.UserId))
        {
            if (SMOHelper.CanEditPet(ViewBag.PetId))
            {
        <a href="@Url.Action("GetDownloadMedicalRecord", "Pet", new { petid = ViewBag.PetId })"  class="btn btn-warning btn-sm pull-right" style="margin-left:10px;"><i class="fa fa-print"></i>@Resources.Pet_MedicalRecord_Print</a>    
        <a href="@Url.Action("Add", "Allergy", new { petId = ViewBag.PetId })" id="addAllergy" class="btn btn-primary btn-sm pull-right"><i class="fa fa-plus-circle"></i>@Resources.Allergy_Edit_Add</a>
            }
        }
    }
    <div class="clearfix"></div>
</ol>

@{ Html.RenderPartial("~/Views/Allergy/_List.cshtml"); }


<div id="addModalAllergy" class="modal fade" tabindex="-1" role="dialog"></div>
<div id="editModalAllergy" class="modal fade" tabindex="-1" role="dialog"></div>
<div id="deleteModalAllergy" class="modal fade" tabindex="-1" role="dialog"></div>

<script src="~/Scripts/customs/views/Allergy/Index.js"></script>
