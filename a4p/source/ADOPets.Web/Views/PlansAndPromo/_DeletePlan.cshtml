@using Resources = ADOPets.Web.Resources.Wording
@model ADOPets.Web.ViewModels.PlansAndPromo.DeleteViewModel
@using Model

<div class="modal fade" id="plansettings" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">@Resources.PlansAndPromo_Delete_Title</h4>
            </div>
            @using (Html.BeginForm("DeletePlan", "PlansAndPromo", FormMethod.Post))
            {   
                @Html.AntiForgeryToken()

                <div class="modal-body">
                    @Html.HiddenFor(model => model.PlanId)
                    <span class="field-validation-error" data-valmsg-for="IsDeletePlan" data-valmsg-replace="true"><span id="IsDeletePlanValidation" class=""></span></span>
                  <div class="clearfix"></div>

                    <label class="checkbox-inline" style="font-size: 16px;">
                        @Html.CheckBoxFor(model => model.IsDeletePlan)
                        @Resources.PlansAndPromo_Delete_RemovePlan
                    </label>
                    <label class="checkbox-inline" style="font-size: 16px;">
                        @Html.CheckBoxFor(model => model.IsDeletePromocode)
                        @Resources.PlansAndPromo_Delete_RemovePromocode
                    </label>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">@Resources.CloseButton</button>
                    <button type="button" onclick="javascript:submitDelete();" class="btn btn-warning">@Resources.PlansAndPromo_Delete_Remove</button>

                    <button type="submit" style="visibility: hidden;" id="btnDeletePlanPromo" class="btn btn-warning">@Resources.PlansAndPromo_Delete_RemoveButton</button>
                </div>
            }
        </div>
    </div>

</div>
<div class="clearfix"></div>
