@using Resources = ADOPets.Web.Resources.Wording
@using Model
@model ADOPets.Web.ViewModels.PlansAndPromo.EditPromocodeViewModel
@using ADOPets.Web.Common.Extensions

<div id="pageTitle">
    <div class="row">
        <div class="col-md-6">
            <h1>@Resources.PlanAndPromo_Edit_EditPromocodeTitle</h1>
        </div>
        <div class="col-md-6">
            <a href="@Url.Action("Index", "PlansAndPromo")" class="btn btn-primary pull-right"><i class="fa fa-angle-left"></i>@Resources.PlanAndPromo_Add_Back</a>
        </div>
    </div>
</div>
<div id="mainContainer">
    <div id="myAccount">
        @if (ViewBag.plaID != null)
        {
            <a href="@Url.Action("EditPlan", "PlansAndPromo", new { planId = ViewBag.plaID })">@Resources.PlanAndPromo_Add_PlanTitle <i class="fa fa-angle-right"></i></a>    
        }
        else
        {            
            <a href="@Url.Action("AddPlan", "PlansAndPromo")">@Resources.PlanAndPromo_Add_PlanTitle <i class="fa fa-angle-right"></i></a>                
        }

        <a href="javascript:void(0)" class="active">@Resources.PlanAndPromo_Add_PromocodeTitle <i class="fa fa-angle-right"></i></a>
        <a href="@Url.Action("RenewUpgradePlan", "PlansAndPromo")">@Resources.PlanAndPromo_Add_PlanRenewalTitle</a>
        <div class="clearfix"></div>
    </div>
    @using (Html.BeginForm("EditPromocode", "PlansAndPromo", FormMethod.Post, new { @id = "EditPromocodeForm", @class = "form-horizontal defaultForm bv-form" }))
    {
        @Html.AntiForgeryToken()
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">@Resources.PlanAndPromo_Add_PromocodeTitle</h3>
            </div>
            <div class="panel-body">
                <div class="column">
                    <div class="form-group">
                        @Html.LabelRequiredFor(model => model.Promocode, new { @class = "col-sm-5 control-label" })
                        <div class="col-sm-7">
                            @Html.TextBoxFor(model => model.Promocode, new { @class = "form-control", @placeholder = Resources.PlansAndPromo_Add_PromocodePlaceholder })
                            @Html.ValidationMessageFor(model => model.Promocode)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.StartDate, new { @class = "col-sm-5 control-label" })
                        <div class="col-sm-7">
                            <div class="input-group">
                                @Html.TextBoxFor(model => model.StartDate, new { @style = "z-index:0 !important;", @class = "form-control datepicker datepickerCustomValidation", placeholder = Resources.PetContact_Add_StartDatePlaceHolder })
                                <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                            </div>
                            @Html.ValidationMessageFor(model => model.StartDate)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.EndDate, new { @class = "col-sm-5 control-label" })
                        <div class="col-sm-7">
                            <div class="input-group">
                                @Html.TextBoxFor(model => model.EndDate, new { @style = "z-index:0 !important;", @class = "form-control datepicker datepickerCustomValidation", placeholder = Resources.Veterinarian_Add_EndDatePlaceHolder })
                                <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                            </div>
                            @Html.ValidationMessageFor(model => model.EndDate)
                        </div>
                    </div>
                </div>
                <div class="column">
                    <div class="form-group">
                        @Html.LabelFor(model => model.CompanyName, new { @class = "col-sm-5 control-label" })
                        <div class="col-sm-7">
                            @Html.TextBoxFor(model => model.CompanyName, new { @class = "form-control", @placeholder = Resources.PlansAndPromo_AddPromo_CompanyNamePlaceHolder })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.SalesPerson, new { @class = "col-sm-5 control-label" })
                        <div class="col-sm-7">
                            @Html.TextBoxFor(model => model.SalesPerson, new { @class = "form-control", @placeholder = Resources.PlansAndPromo_AddPromo_SalesPersonPlaceholder })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.MaxOwner, new { @class = "col-sm-5 control-label" })
                        <div class="col-sm-7">
                            @Html.TextBoxFor(model => model.MaxOwner, new { @class = "form-control", @placeholder = Resources.PlansAndPromo_AddPromo_MaxOwnerPlaceholder })
                            @Html.ValidationMessageFor(model => model.MaxOwner)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.IsVisibleToOwner, new { @class = "col-sm-5 control-label" })
                        <div class="col-sm-7">
                            <label class="radio-inline">
                                @Html.RadioButtonFor(m => m.IsVisibleToOwner, true, new { @checked = "checked", @value = Resources.PlansAndPrmo_Index_Trial_Yes })
                                @Resources.PlansAndPrmo_Index_Trial_Yes
                            </label>
                            <label class="radio-inline">
                                @Html.RadioButtonFor(m => m.IsVisibleToOwner, false, new { @value = Resources.PlansAndPrmo_Index_Trial_No })
                                @Resources.PlansAndPrmo_Index_Trial_No
                            </label>
                        </div>
                    </div>
                    @Html.HiddenFor(m => m.PlanID)
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
     
        <div class="form-group">
            <div class="col-md-6">
                <a id="cancelButton" href="@Url.Action("Index", "PlansAndPromo")" class="btn btn-warning btn-lg pull-right">@Resources.Pet_Add_CancelButton</a>
            </div>
            <div class="col-md-6">
                <button type="submit" id="btnSubmitPromocode" class="btn btn-success btn-lg">@Resources.PlansAndPromo_Add_Save</button>
            </div>
        </div>
    }
</div>
<div class="clearfix"></div>


<script>
    function GetTranstaltionPlanPromo() {
        var result = {
            "AddPromoPlanValidation": '@Resources.PlansAndPromo_AddPromo_PlanValidation',
            "DeletePlanValidation": '@Resources.PlansAndPromo_Delete_PlanValidation'
        };
        return result;
    }
</script>
<script src="@Url.Content("~/Scripts/customs/views/PlansAndPromo/AddPromo.js")"></script>
