@using Resources = ADOPets.Web.Resources.Wording
@model ADOPets.Web.ViewModels.Account.ForgotPasswordViewModel

<div id="main_loginbx" style="min-height: 500px;">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading" style="padding: 10px 15px;">
                    <h3 class="panel-title">@Resources.Account_ForgotPassword_Title </h3>
                </div>
                <div class="panel-body">
                    @Html.ValidationSummary(true)
                    <p class="text-success">@Resources.Account_ForgotPassword_SubTitle </p>
                    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post))
                    {
                        <fieldset>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = Resources.Account_ForgotPassword_EmailPlaceHolder })
                                @Html.ValidationMessageFor(model => model.Email)
                            </div>
                            <div class="pull-left" style="margin-bottom: 15px;"><a href="@Url.Action("Login", "Account")">@Resources.Account_ForgotPassword_BackToLogin</a></div>
                            <div class="pull-right" style="margin-bottom: 15px;"><a href="@Url.Action("SignUp", "Account")">@Resources.Account_ForgotPassword_SignupNow</a></div>
                            <div class="clearfix"></div>
                            <input class="btn btn-lg btn-success btn-block" type="submit" value="@Resources.Account_ForgotPassword_Submit">
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
