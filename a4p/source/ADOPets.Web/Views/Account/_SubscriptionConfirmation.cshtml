@model ADOPets.Web.ViewModels.Account.PaymentResultViewModel
@using Resources = ADOPets.Web.Resources.Wording

<div id="mainBox">
    <div class="customscroll" style="border: none;">

        @if (Model.Success)
        {
            if (Model.SubscriptionPlan != null)
            { 
                <div class="panel panel-primary" style="text-align: center;">
                <div class="panel-heading">
                    <h3 style="padding: 0; margin: 0;">@Resources.Account_SignUp_ThankYou</h3>
                </div>
                <div class="panel-body">
                    @Html.LabelFor(m => m.SubscriptionPlan) : @Model.SubscriptionPlan<br />
                    @Html.LabelFor(m => m.TransactionDate) : @Model.TransactionDate<br />
                    @Html.LabelFor(m => m.OrderNumber) : @Model.OrderNumber<br />
                    @Html.LabelFor(m => m.TransactionResult) : @Model.TransactionResult<br />
                    <br />
                    <a href="@Url.Action("Login", "Account")" class="btn btn-success">@Resources.Account_SignUp_BackToLogin</a>
                </div>
            </div>
            }
            else
            {
            <div class="panel panel-primary" style="text-align: center;">
                <div class="panel-heading">
                    <h3 style="padding: 0; margin: 0;">@Resources.Account_SignUp_ThankYou</h3>
                </div>
                <div class="panel-body">
                     @Html.LabelFor(m => m.SubscriptionPlan):@ViewBag.PlanName<br />
                    <h5  style="text-align:center;font:bold;" >@Resources.Account_SignUp_ThankYouSub </h5>
                    <br />
                    <a href="@Url.Action("Login", "Account")" class="btn btn-success">@Resources.Account_SignUp_BackToLogin</a>
                </div>

            </div>
            }
        }
        else
        { 
            <div class="panel panel-danger col-lg-8 col-lg-offset-2" style="text-align: center; padding:0;">
                <div class="panel-heading">
                    <h3 style="padding: 0; margin: 0;">@Resources.Account_SignUp_FailureMessage</h3>
                </div>
                <div class="panel-body">
                    <h4 class="text-warning">@Model.ErrorMsg</h4>
                    <br />
                    <h4 class="text-warning">@Model.TransactionResult</h4>
                    <br />
                    <br />
                    <a href="@Url.Action("SignUp", "Account")" class="btn btn-warning">@Resources.Account_SignUp_TryAgain</a>
                </div>

            </div>
        }
    </div>
</div>
<div id="signUpBottom" style="height:65px;">
    
</div>

<script>
    $(window).on('load resize', function () {
        var winheight = $(window).height();
        var scrollheight = winheight - 234;
        //alert(scrollheight);
        $('.customscroll').css("height", scrollheight);
    });

    $(function () {
        var winheight = $(window).height();
        var scrollheight = winheight - 234;
        //alert(scrollheight);
        $('.customscroll').css("height", scrollheight);
    });

    //for custom scroller
    $('.customscroll').enscroll({
        showOnHover: true,
        verticalTrackClass: 'track3',
        verticalHandleClass: 'handle3'
    });
</script>
