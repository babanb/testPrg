@using Resources = ADOPets.Web.Resources.Wording
@using ADOPets.Web.Common.Helpers
@using ADOPets.Web.Common.Authentication
@using ADOPets.Web.Common.Extensions

@using Model
@{  Layout = null; }

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Activ4pets">
    <link rel="shortcut icon" href="@Url.Content("~/Content/images/favicon.gif")">
    @Html.MetaAcceptLanguage()
    @Html.GetDomainName()
    @Html.GetCurrencyName()
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css/signupCSS")
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    @Scripts.Render("~/bundles/signupJS")
    <style>
        .datepicker span.input-group-addon {
            border-left: 0px;
        }

        .datepicker {
            z-index: 0 !important;
        }
    </style>

</head>
<body style="background: url(../Content/images/a4p_bg.jpg) top right no-repeat; overflow: hidden;">
    @Html.Hidden("ApplicationPath", HttpContextHelper.GetApplicationPath())
    <div class="container-fluid" style="background: #fff; z-index: 1;">
        <div id="logo" class="pull-left">
            <a href="http://www.activ4pets.com/">
                <img src="../Content/images/activ4pets-logoHr.png" class="img-responsive hidden-xs hidden-sm" alt="@Resources.ADOPets_Title" />
                <img src="../Content/images/activ4pets-logo-md.png" class="img-responsive hidden-md hidden-lg" alt="@Resources.ADOPets_Title" />
            </a>
        </div>
        <a href="@Url.Action("Login", "Account")" class="btn btn-primary" style="margin: 15px 0 0 0; float: right;">@Resources.Account_Login_Login</a>
        <div style="margin: 20px 20px 0 0; float: right;">
            @Resources.Shared_Layout_HeaderMessageFirst
            @if (DomainHelper.GetDomain() == DomainTypeEnum.French)
            { 
                @Resources.Shared_Layout_HeaderMessageContactNumber
            }
            else if (DomainHelper.GetDomain() == DomainTypeEnum.India)
            {
                @Resources.Shared_Layout_HeaderMessageContactNumberIN
            }
            else
            {
                @Resources.Shared_Layout_HeaderMessageContactNumberUS
            } | <a href="http://www.activ4pets.com/contact/" target="_blank">@Resources.PetsGlobalPage_ContactUs</a>
        </div>
        <div class="clearfix"></div>
    </div>
    <!--Header end here-->
    <!--- /container fluid---->
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8 col-md-8 col-sm-9" style="background: #FFF; padding-left: 0; padding-right: 0px;">
                <div class="signUpControlbx">
                    <div class="row">
                        <div id="dvSelectPlan" class="col-sm-4 text-center titleTab">
                            <div><i class="fa fa-tag"></i></div>
                            @Resources.Signup_Plan_SelectPlan
                        </div>
                        <div id="dvUserInformation" class="col-sm-4 titleTab text-center">
                            <div><i class="fa fa-file-text-o"></i></div>
                            @Resources.Signup_Plan_UserInformation
                        </div>
                        <div id="dvMakePayment" class="col-sm-4 text-center titleTab">
                            <div><i class="fa fa-credit-card"></i></div>
                            @Resources.Signup_Plan_MakePayment
                        </div>
                    </div>
                </div>

                <!--</div> ------------ /sidnUp-tab ------>
                <div id="mainContainerBox">
                    @{ Html.RenderPartial("~/Views/Account/_SelectPlan.cshtml"); }
                </div>
            </div>
            <!------ / col-lg-8 ----->
            <div class="col-lg-4 col-md-4 col-sm-3">
                <div class="row" align="right" style="padding: 0 20px 0 20px;">
                    <h1 id="signUpRightText">@Resources.Signup_Plan_RightTitle</h1>
                    <p class="p1">
                        @Resources.Signup_Plan_RightDescription
                    </p>
                    <a href="http://www.activ4pets.com/" class="btn btn-success hiwBtn">@Resources.Signup_Plan_HowItWorks
                    </a>
                </div>
                <!-- / row-->
            </div>
            <!-------- /col-lg-4 col-md-4 col-sm-3 ----------->
        </div>
        <!------ /row--->
    </div>
    <!------- /Container-fluid-->

    <div id="divLoading" style="width: 100%; position: fixed; top: 0; left: 0; text-align: center; display: none; z-index: 9999; background: url('/Content/images/ajax_loader_blue_128.gif') center center no-repeat;"></div>


    <script src="@Url.Content("~/Scripts/customs/views/Account/AccountSignUp.js")"></script>

    @Scripts.Render("~/bundles/signupFooterJS")


    <script type="text/javascript">

        function GetApplicationPath() {
            return $('#ApplicationPath').val();
        }
        $(window).on('load resize', function () {
            var winheight = $(window).height();
            var scrollheight = winheight - 283;
            $('.customscroll').css("height", scrollheight);
        });
        $(function () { $("[data-toggle='tooltip']").tooltip(); });
        $('.customscroll').enscroll({
            showOnHover: true,
            verticalTrackClass: 'track3',
            verticalHandleClass: 'handle3'
        });
    </script>
</body>
</html>
