@using Resources = ADOPets.Web.Resources.Contact.Delete
@model ADOPets.Web.ViewModels.Contact.DeleteViewModel

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">@Resources.Message</h4>
        </div>
        @using (Html.BeginForm("Delete", "Contact", FormMethod.Post, new { @class = "form-horizontal defaultForm", @role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Id)
                          
            <div class="modal-body">
                <div class="columnfull" style="width: 80%;">
                    <div class="detailrow">
                        <div>@Resources.ContactName</div>
                        <div class="colonspace">:</div>
                        <div>@Model.LastName @Model.FirstName</div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="detailrow">
                        <div>@Resources.Relationship</div>
                        <div class="colonspace">:</div>
                        <div>@Model.Relationship</div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="detailrow">
                        <div>@Resources.Email</div>
                        <div class="colonspace">:</div>
                        <div>@Model.Email</div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="detailrow">
                        <div>@Resources.Home</div>
                        <div class="colonspace">:</div>
                        <div>@Model.Home</div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="detailrow">
                        <div>@Resources.Office</div>
                        <div class="colonspace">:</div>
                        <div>@Model.Office</div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="detailrow">
                        <div>@Resources.Cell</div>
                        <div class="colonspace">:</div>
                        <div>@Model.Cell</div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="detailrow">
                        <div>@Resources.Fax</div>
                        <div class="colonspace">:</div>
                        <div>@Model.Fax</div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>   
            
            <div class="modal-footer">
                <button type="submit" class="btn btn-warning">@Resources.SaveChanges</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">@Resources.Cancel</button>
            </div>
        }

    </div>
</div>
