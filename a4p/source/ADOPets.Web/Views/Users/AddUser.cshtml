@using Resources = ADOPets.Web.Resources.Wording
@using ADOPets.Web.Common.Extensions
@using ADOPets.Web.Common.Helpers
@using Model
@model ADOPets.Web.ViewModels.Users.AddUserViewModel
<style>
    #final_plan {
        position: relative;
        padding: 2% 2% 2% 15%;
        background: #ffd36b;
        -moz-border-radius: 3px;
        -webkit-border-radius: 3px;
        border-radius: 3px;
        margin-top: 10px;
        color: #575555;
        font-size: 15px;
        font-weight: 600;
        text-align: left;
        display: block;
        min-height: 50px;
    }

        #final_plan:before {
            content: attr(data-icon);
            font-family: FontAwesome;
            font-style: normal;
            font-weight: normal;
            font-size: 200%;
            position: absolute;
            left: 4%;
        }
</style>
<div id="pageTitle">
    <div class="row">
        <div class="col-md-6">
            <h1>@Resources.Users_AddUser_Title</h1>
        </div>
        <div class="col-md-6">
            <a href="@Url.Action("Index", "Users")" class="btn btn-primary pull-right"><i class="fa fa-angle-left"></i>@Resources.Users_AddUser_Back</a>
        </div>
    </div>
</div>
<div id="mainContainer">
    @using (Html.BeginForm("AddUser", "Users", FormMethod.Post, new { enctype = "multipart/form-data", @id = "AddUserForm", @class = "form-horizontal defaultForm", @role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">@Resources.Users_AddUser_BasicInformation</h3>
            </div>
            <div class="panel-body">

                <div class="column">
                    <div class="form-group">
                        @Html.LabelRequiredFor(model => model.Usertype, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @if (Roles.IsUserInRole(UserTypeEnum.VeterinarianAdo.ToString()) || Roles.IsUserInRole(UserTypeEnum.VeterinarianLight.ToString()))
                            {
                                @Html.EnumDropDownListFor(m => m.Usertype, ViewBag.ExcludedItemList as List<UserTypeEnum>, ViewBag.UsertypeText as string, new { @class = "form-control", @id = "selectuserType", @placeholder = Resources.Users_AddUser_UserTypePlaceHolder })
                            }
                            else
                            {              
                                @Html.EnumDropDownListFor(m => m.Usertype, ViewBag.ExcludedItemList as List<UserTypeEnum>, Resources.Users_AddUser_UserTypePlaceHolder, new { @class = "form-control", @id = "selectuserType" })
                            }
                            @Html.ValidationMessageFor(model => model.Usertype)
                            @Html.HiddenFor(model => model.UserTypeId)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelRequiredFor(model => model.FirstName, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", placeholder = Resources.Users_AddUser_FirstNamePlaceHolder })
                            @Html.ValidationMessageFor(model => model.FirstName)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelRequiredFor(model => model.LastName, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", placeholder = Resources.Users_AddUser_LastNamePlaceHolder })
                            @Html.ValidationMessageFor(model => model.LastName)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.BirthDate, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            <div class="input-group date">
                                @Html.TextBoxFor(model => model.BirthDate, new { @class = "form-control datepicker datepickerForUserBirthday", placeholder = Resources.Users_AddUser_DateOfBirthPlaceHolder, @style = "z-index:0 !important;" })
                                <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Gender, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.EnumDropDownListFor(m => m.Gender, "Select One", new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelRequiredFor(model => model.Email, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = Resources.Users_AddUser_EmailPlaceHolder })
                            @Html.ValidationMessageFor(model => model.Email)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelRequiredFor(model => model.TimeZone, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.EnumDropDownListFor(m => m.TimeZone, Resources.Users_AddUser_TimeZonePlaceHolder, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.TimeZone)
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="lblphotoupload" class="col-sm-4 control-label">@Resources.Users_AddUser_UploadPhoto</label>
                        <div class="col-sm-8">
                            <img src="/Content/Images/ownerProfilepic.jpg" style="width: 50px; height: 50px; float: left;" id="imgNewUserProfilePic">
                            <div style="margin: 7px 0 0 20px; float: left; width: 100px;">
                                <a href='#' id="lnkUploadUserPhoto" onclick="document.getElementById('imgNewUserPhoto').click(); return false;"><b>@Resources.Users_AddUser_UploadPhoto</b></a>
                                <input type="file" name="imgNewUserPhoto" id="imgNewUserPhoto" style="opacity: 0; height: 0; width: 0;" accept="image/*" />
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </div>

                </div>
                <div class="column">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Address1, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(model => model.Address1, new { @class = "form-control", placeholder = Resources.Users_AddUser_Address1PlaceHolder })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Address2, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(model => model.Address2, new { @class = "form-control", placeholder = Resources.Users_AddUser_Address2PlaceHolder })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.City, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(model => model.City, new { @class = "form-control", placeholder = Resources.Users_AddUser_CityPlaceHolder })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Country, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.EnumDropDownListFor(m => m.Country, Resources.Users_AddUser_CountryPlaceHolder, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.State, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.EnumDropDownListFor(m => m.State, Resources.Users_AddUser_StatePlaceHolder, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Zip, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(model => model.Zip, new { @class = "form-control", placeholder = Resources.Users_AddUser_ZipPlaceHolder })
                            @Html.ValidationMessageFor(model => model.Zip)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.PrimaryPhone, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(model => model.PrimaryPhone, new { @class = "form-control", placeholder = Resources.Users_AddUser_PrimaryPhonePlaceHolder })
                            @Html.ValidationMessageFor(model => model.PrimaryPhone)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.SecondaryPhone, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(model => model.SecondaryPhone, new { @class = "form-control", placeholder = Resources.Users_AddUser_SecondaryPhonePlaceHolder })
                            @Html.ValidationMessageFor(model => model.SecondaryPhone)
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>

        <!--Basic Information end here-->
  
        <div class="panel panel-info" id="extraFields">
            <div class="panel-heading">
                <h3 class="panel-title">@Resources.Users_AddUser_OtherDetails</h3>
            </div>
            <div class="panel-body">
                <div class="column">
                    <div class="form-group">
                        @Html.LabelFor(model => model.CenterId, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.DropDownListFor(model => model.CenterId, ViewBag.CenterList as IEnumerable<SelectListItem>, Resources.Users_AddUser_CenterPlaceHolder, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelRequiredFor(model => model.Speciality, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.EnumDropDownListFor(model => model.Speciality, Resources.Users_AddUser_SpecialityPlaceHolder, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Speciality)
                            @Html.HiddenFor(model => model.SpecialityId)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Hospital, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(model => model.Hospital, new { @class = "form-control", placeholder = Resources.Users_AddUser_HospitalPlaceHolder })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Diploma, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(model => model.Diploma, new { @class = "form-control", placeholder = Resources.Users_AddUser_DiplomaPlaceHolder })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.StateExercise, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(model => model.StateExercise, new { @class = "form-control", placeholder = Resources.Users_AddUser_StateExercisePlaceHolder })
                        </div>
                    </div>
                </div>

                <div class="column">
                    <div class="form-group">
                        @Html.LabelFor(model => model.DEA, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(model => model.DEA, new { @class = "form-control", placeholder = Resources.Users_AddUser_DEAPlaceHolder })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.NPI, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(model => model.NPI, new { @class = "form-control", placeholder = Resources.Users_AddUser_NPIPlaceHolder })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.LicenceToPractice, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(model => model.LicenceToPractice, new { @class = "form-control", placeholder = Resources.Users_AddUser_LicenceToPracticePlaceHolder })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Comments, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(model => model.Comments, new { @class = "form-control", placeholder = Resources.Users_AddUser_CommentsPlaceHolder })
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>

        <!--other details end here-->

        <div class="panel panel-info" id="promoPlan">
            <div class="panel-heading">
                <h3 class="panel-title">@Resources.Users_AddUser_OwnerPlanAndPromocode</h3>
            </div>
            <div class="panel-body">
                <div class="column">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Promocode, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @if (Roles.IsUserInRole(UserTypeEnum.Admin.ToString()))
                            {
                                @Html.DropDownListFor(model => model.Promocode, ViewBag.Promocode as IEnumerable<SelectListItem>, Resources.Users_EditUser_PromocodePlaceHolder, new { @class = "form-control" })
                            }
                            else
                            {
                                @Html.DropDownListFor(model => model.Promocode, ViewBag.Promocode as IEnumerable<SelectListItem>, Resources.Users_EditUser_PromocodePlaceHolder, new { @class = "form-control" })
                            }
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.BasePlanName, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.DropDownListFor(model => model.BasePlanName, ViewBag.Plans as IEnumerable<SelectListItem>, new { @class = "form-control", @style = "margin-bottom:0;" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.AdditionalPets, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                           
                             <label class="control-label" id="MaxPetCount">@ViewBag.PetCount</label>
                           
                        </div>
                    </div>
                </div>
                <div class="column">
                    <div class="form-group">
                        @Html.LabelFor(model => model.AdditionalInfo, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                          
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Description, new { @class = "col-sm-4 control-label", @id="BasePlanDescription" })
                        <div class="col-sm-8">
                       <label id="description" for="Desc" style="text-align:left;font-weight:400;">@ViewBag.Discription </label>
                        </div>
                    </div>
                    @Html.HiddenFor(model => Model.BasePlanId)
                    <div class="clearfix"></div>
                    <div class="form-group">
                        <div class="col-sm-4"></div>
                        <div class="col-sm-8">
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>

        <!--Owner Plan & Promo Code end here-->

        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">@Resources.Users_AddUser_LoginDetails</h3>
            </div>
            <div class="panel-body">
                <div class="column">
                    <div class="form-group">
                        @Html.LabelRequiredFor(model => model.Username, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = Resources.Users_AddUser_UserNamePlaceHolder })
                            @Html.ValidationMessageFor(model => model.Username)
                        </div>
                    </div>
                </div>
                <div class="column">
                    <div class="form-group">
                        @Html.LabelRequiredFor(model => model.Password, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            <p style="padding: 5px 0 0 0; margin: 0; font-size: 13px; text-align: justify;" class="text-info">@Resources.Users_Add_PasswordMessage</p>                           
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>

        <!--login details end here-->
        
        <div class="form-group">
            <div class="col-md-6">
                <a href="@Url.Action("Index", "Users")" class="btn btn-warning btn-lg pull-right">@Resources.Users_AddUser_Cancel</a>
            </div>
            <div class="col-md-6">
                <button type="submit" class="btn btn-success btn-lg">@Resources.Users_AddUser_Submit</button>
            </div>
        </div>
    }
</div>

<script src="~/Scripts/customs/views/Users/Add.js"></script>
