@using Resources = ADOPets.Web.Resources.Wording
@model IEnumerable<ADOPets.Web.ViewModels.Calender.CalenderNotificationViewModel>

@{var count = 0;}

@if (Model.Any())
{
    <div class="row">
    @foreach (var mail in Model)
    {
    count = count + 1;
    <a href="@Url.Action("Index", "Calender", new { id = mail.ReminderId })">
          <div class="col-md-2"> <i class="fa fa-clock-o"></i> </div>
      <div class="col-md-10 ellipsisText">
            @mail.Subject<br>
            <span>@mail.ReminderDateText.ToShortDateString(), @mail.ReminderDateText.ToShortTimeString()</span>
        </div>
    </a>
        if (count == 1 &&Model.Count()>1)
        {
        <div class="sidebx-sep1"></div>
        }
    <div class="clearfix"></div>
    }   
    </div>
    <a href="@Url.Action("Index", "Calender")" class="see-allBtn">@Resources.Calendar_Notification_ReminderViewAll</a>
}
else
{
    <div class="row">
         <div class="col-md-10 ellipsisText">
            @Resources.Calendar_Notification_NoRecords<br>
        </div>
    </div>
    <a href="@Url.Action("Index", "Calender")" class="see-allBtn">@Resources.Calendar_Notification_AddNewReminder</a>
}
