@using Resources = ADOPets.Web.Resources.Wording
@model ADOPets.Web.ViewModels.FoodPlan.DeleteViewModel

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">@Resources.FoodPlan_Delete_Message</h4>
        </div>
        @using (Ajax.BeginForm("Delete", "FoodPlan", new AjaxOptions
        {
            UpdateTargetId = "foodplanList",
            HttpMethod = "POST",
            InsertionMode = InsertionMode.Replace,
            OnSuccess = "CloseDialogfoodplan"
        }, new { @class = "form-horizontal defaultForm", @role = "form" }))
        {
            @Html.AntiForgeryToken()

            @Html.HiddenFor(m => m.PetId)
            @Html.HiddenFor(m => m.Id)
            <div class="modal-body">

                <div class="columnfull" style="width: 80%;">
                    <div class="detailrow">
                        <div>@Resources.FoodPlan_Delete_FoodName</div>
                        <div class="colonspace">:</div>
                        <div>@Model.FoodName</div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="detailrow">
                        <div>@Resources.FoodPlan_Delete_RecomendedFood</div>
                        <div class="colonspace">:</div>
                        <div>
                            @if (Model.RecomendedFood == true)
                            {@Resources.FoodPlan_Delete_Yes }
                            else
                            {@Resources.FoodPlan_Delete_No}
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="detailrow">
                        <div>@Resources.FoodPlan_Delete_ForbidenFood</div>
                        <div class="colonspace">:</div>
                        <div>
                            @if (Model.ForbidenFood == true)
                            {@Resources.FoodPlan_Delete_Yes }
                            else
                            {@Resources.FoodPlan_Delete_No}
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="detailrow">
                        <div>@Resources.FoodPlan_Delete_Comment</div>
                        <div class="colonspace">:</div>
                        <div>@Html.Raw("<pre>" + Model.Comment + "</pre>")</div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>            
            <div class="modal-footer">
                <button type="submit" class="btn btn-warning">@Resources.FoodPlan_Delete_SaveChanges</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">@Resources.FoodPlan_Delete_Cancel</button>
            </div>
        }
    </div>
</div>
