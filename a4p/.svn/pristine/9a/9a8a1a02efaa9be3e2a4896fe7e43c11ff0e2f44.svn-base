@using Resources = ADOPets.Web.Resources.Wording
@model ADOPets.Web.ViewModels.Message.InviteViewModel
@using Model
<div id="pageTitle">
    <div class="row">
        <div class="col-md-8">
            <h1>@Resources.Message_Invite_InviteTitle</h1>
        </div>

    </div>
</div>
<div class="messageStyle">
    @{ Html.RenderPartial("_Alerts"); }
</div>


<div id="mainContainer">
    @if (!Roles.IsUserInRole(UserTypeEnum.VeterinarianAdo.ToString()) && !Roles.IsUserInRole(UserTypeEnum.VeterinarianLight.ToString()) && !Roles.IsUserInRole(UserTypeEnum.VeterinarianExpert.ToString()) && !Roles.IsUserInRole(UserTypeEnum.Admin.ToString()))
    {
        <div id="hiderightsidebar">
            <img src="@Url.Content("~/Content/images/hide-img.png")" width="22" height="34" alt=""/>
        </div>
        <div id="showrightsidebar">
            <img src="@Url.Content("~/Content/images/show-img.png")" width="22" height="34" alt="" />
        </div>
    }
    <div class="well well-sm">
        <div class="columnfull first">
            @using (Html.BeginForm("Invite", "Message", FormMethod.Post, new { @id = "newInviteMessageForm", @class = "form-horizontal defaultForm", @role = "form" }))
            {
                @Html.AntiForgeryToken()      
                <div class="form-group">
                    @Html.Hidden("hdninvitetype", "Veterinarian")
                    <div class="col-sm-8 col-sm-offset-4">

                        @Html.RadioButtonFor(Model => Model.IsFriend, true, new { id = "friendCall", @name = "invitecallforfriend", @value = "Friend" })
                        @Html.LabelFor(model => model.IsFriend, Resources.Message_Invite_Friend)
                        &nbsp;
                        @Html.RadioButtonFor(Model => Model.IsFriend, true, new { id = "vetCall", @name = "invitecallforvet", @checked = "checked", @value = "Veterinarian" })
                        @Html.LabelFor(model => model.IsVet, Resources.Message_Invite_Veterinarian)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-8 col-sm-offset-4">
                        <div id="ForFriend" class="text-primary" style="display: none">
                          @Resources.Invite_ForFriend 
                        </div>
                        <div id="ForVete" class="text-primary">
                           @Resources.Invite_ForVeterinarian                
                        </div>
                    </div>
                </div>
       
                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-4 control-label">@Resources.Message_Invite_FirstName<span class="mendetory-star">*</span></label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", placeholder = Resources.Message_Invite_FirstNamePlaceHolder })
                        @Html.ValidationMessageFor(model => model.FirstName)
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-4 control-label">@Resources.Message_Invite_LastName<span class="mendetory-star">*</span></label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", placeholder = Resources.Message_Invite_LastNamePlaceHolder })
                        @Html.ValidationMessageFor(model => model.LastName)
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-4 control-label">@Resources.Message_Invite_Email<span class="mendetory-star">*</span></label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = Resources.Message_Invite_EmailPlaceHolder })
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-4 control-label">@Resources.Message_Invite_Message</label>
                    <div class="col-sm-8">
                        @Html.TextAreaFor(model => model.Message, new { @class = "form-control", placeholder = Resources.Message_Invite_MessagePlaceholder })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-8 col-sm-offset-4">
                        <button type="submit" class="btn btn-primary">@Resources.Message_Invite_Send</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">@Resources.Message_Invite_Cancel</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


<script src="~/Scripts/customs/views/Message/InviteToggle.js"></script>

