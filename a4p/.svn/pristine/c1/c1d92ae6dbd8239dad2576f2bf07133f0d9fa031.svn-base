@using Resources = ADOPets.Web.Resources.Wording
@model ADOPets.Web.ViewModels.Allergy.EditViewModel
@using ADOPets.Web.Common.Extensions

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="myModalLabel">@Resources.Allergy_Edit_Title</h4>
        </div>
        @using (Ajax.BeginForm("Edit", "Allergy", new AjaxOptions
        {
            UpdateTargetId = "allergyList",
            HttpMethod = "POST",
            InsertionMode = InsertionMode.Replace,
            OnSuccess = "CloseDialogAllergy"
        }, new { @id = "editAllergyForm", @class = "form-horizontal defaultForm", @role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="modal-body">


                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.PetId)

                <div class="form-group">
                    @Html.LabelRequiredFor(model => model.Allergy, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.Allergy, new { @class = "form-control", placeholder = Resources.Allergy_Edit_AllergyPlaceHolder })
                        @Html.ValidationMessageFor(model => model.Allergy)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.StartDate, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-8">
                        <div class="input-group date">
                            @Html.TextBoxFor(model => model.StartDate, new { @class = "form-control datepicker datepickerCustomValidation datepickerAboveBirth", placeholder = Resources.Allergy_Edit_StartDatePlaceHolder, @Value = Model.StartDate.HasValue ? Model.StartDate.Value.ToString("d") : string.Empty })
                            <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.EndDate, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-8">
                        <div class="input-group date">
                            @Html.TextBoxFor(model => model.EndDate, new { @class = "form-control datepicker datepickerCustomValidation datepickerAboveBirth", placeholder = Resources.Allergy_Edit_EndDatePlaceHolder, @Value = Model.EndDate.HasValue ? Model.EndDate.Value.ToString("d") : string.Empty })
                            <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelRequiredFor(model => model.Reaction, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.Reaction, new { @class = "form-control", placeholder = Resources.Allergy_Edit_ReactionPlaceHolder })
                        @Html.ValidationMessageFor(model => model.Reaction)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Comment, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-8">
                        @Html.TextAreaFor(model => model.Comment, new { @class = "form-control", @rows = "3", placeholder = Resources.Allergy_Edit_CommentPlaceHolder })
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">@Resources.Allergy_Edit_SaveChanges</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">@Resources.Allergy_Edit_Cancel</button>
            </div>
        }
    </div>
</div>


<script src="~/Scripts/customs/views/Allergy/Form.js"></script>
