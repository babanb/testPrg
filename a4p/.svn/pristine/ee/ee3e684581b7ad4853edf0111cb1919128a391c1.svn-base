@model ADOPets.Web.ViewModels.Econsultation.AddViewModel
@using ADOPets.Web.Common.Extensions
@using ADOPets.Web.Common.Helpers
@using Model
@using Resources = ADOPets.Web.Resources.Wording;

@{
    var ContactValue = "";
}

@using (Ajax.BeginForm("Confirmation", "Econsultation",
    new AjaxOptions
        {
            OnBegin = "ShowLoading",
            OnComplete = "HideLoading"
        },
        new
        {
            @id = "EconsultationConfirmationForm",
            @class = "form-horizontal defaultForm",
            @role = "form"
        }))
{
    <div id="econsultConfirm">
        <h4>
            <span class="pull-left">@Resources.Econsultation_Add_SetupInformation</span> <a href="#" id="GoToStep1" onclick="toggle_visibility1();" class="pull-right">
                <i class="fa fa-pencil"></i>@Resources.Econsultation_Add_Edit</a>
            <div class="clearfix"></div>
        </h4>
        <div class="columnfull">

            <div class="detailrow">
                <div>@Resources.Econsultation_Add_PetName</div>
                <div class="colonspace">:</div>
                <div>
                    @Model.objSetup.PetName
                </div>
                <div class="clearfix"></div>
            </div>

            <div class="detailrow">
                <div>@Resources.Econsultation_Add_CountryOfEconsultation</div>
                <div class="colonspace">:</div>
                <div>
                    @Html.EnumDisplayFor(m => m.objSetup.Country)
                </div>
                <div class="clearfix"></div>
            </div>

            <div class="detailrow">
                <div>@Resources.Econsultation_Add_TimeZoneOfEconsultation</div>
                <div class="colonspace">:</div>
                <div>@Html.EnumDisplayFor(m => m.objSetup.TimeZone)</div>
                <div class="clearfix"></div>
            </div>

            <div class="detailrow">
                <div>@Resources.Econsultation_Add_DayOfEconsultation</div>
                <div class="colonspace">:</div>
                <div>@Model.objSetup.Date.Value.ToLongDateString() </div>
                <div class="clearfix"></div>
            </div>

            <div class="detailrow">
                <div>@Resources.Econsultation_Add_TimeOfEconsultation</div>
                <div class="colonspace">:</div>
                <div>@Model.objSetup.Time.Value.ToShortTimeString()</div>
                <div class="clearfix"></div>
            </div>

            <div class="detailrow">
                <div>@Resources.Econsultation_Add_ContactType</div>
                <div class="colonspace">:</div>
                <div>                    
                    @if(Model.objSetup.ContactType.HasValue)
                    {
                        if (Model.objSetup.ContactType.Value.ToString() == EConsultationContactTypeEnum.Phone.ToString())
                        {
                            if (!string.IsNullOrEmpty(Model.objSetup.Phone))
                            {
                                ContactValue = Model.objSetup.ContactType + "-" + Model.objSetup.Phone.ToString();
                            }
                            else {
                                ContactValue = Model.objSetup.ContactType + "-";
                            }
                        }
                        else
                        {
                            ContactValue = Model.objSetup.ContactType + "-" + Model.objSetup.Email.ToString();
                        }
                    }
                    @ContactValue
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="detailrow">
                <div>@Resources.Econsultation_Add_PetCondition</div>
                <div class="colonspace">:</div>
                <div>@Model.objSetup.PetCondition</div>
                <div class="clearfix"></div>
            </div>

            <div class="detailrow">
                <div>@Resources.Econsultation_Add_SymptomsOfPet</div>
                <div class="colonspace">:</div>
                <div>
                    1- @Model.objSetup.Symptoms1<br>
                    2- @Model.objSetup.Symptoms2<br>
                    3- @Model.objSetup.Symptoms3

                </div>
                <div class="clearfix"></div>
            </div>

            <div class="detailrow">
                <div>@Resources.Econsultation_Add_AssignVet</div>
                <div class="colonspace">:</div>
                <div class="text-success">@Model.objSetup.VetName</div>
                <div class="clearfix"></div>
            </div>

        </div>
        <h4>
            <span class="pull-left">@Resources.Econsultation_Add_BillingInformation</span> <a href="#" id="GoToStep2" onclick="toggle_visibility2();" class="pull-right">
                <i class="fa fa-pencil"></i>@Resources.Econsultation_Add_Edit</a>
            <div class="clearfix"></div>
        </h4>
        <div class="columnfull">
            <div class="detailrow">
                <div>@Resources.Econsultation_Add_CreditCardType</div>
                <div class="colonspace">:</div>
                <div>@Model.objBilling.CreditCardType</div>
                <div class="clearfix"></div>
            </div>
            <div class="detailrow">
                <div>@Resources.Econsultation_Add_CreditCardNumber</div>
                <div class="colonspace">:</div>
                <div>@Model.objBilling.CreditCardNumber</div>
                <div class="clearfix"></div>
            </div>
            <div class="detailrow">
                <div>@Resources.Econsultation_Add_ExpirationDate</div>
                <div class="colonspace">:</div>
                <div>@Model.objBilling.ExpirationDate</div>
                <div class="clearfix"></div>
            </div>
            <div class="detailrow">
                <div>@Resources.Econsultation_Add_CVV</div>
                <div class="colonspace">:</div>
                <div>@Model.objBilling.CVV</div>
                <div class="clearfix"></div>
            </div>
            <div class="detailrow">
                <div>@Resources.Econsultation_Add_Address1</div>
                <div class="colonspace">:</div>
                <div>@Model.objBilling.Address1</div>
                <div class="clearfix"></div>
            </div>
            <div class="detailrow">
                <div>@Resources.Econsultation_Add_Address2</div>
                <div class="colonspace">:</div>
                <div>@Model.objBilling.Address2</div>
                <div class="clearfix"></div>
            </div>
            <div class="detailrow">
                <div>@Resources.Econsultation_Add_City</div>
                <div class="colonspace">:</div>
                <div>@Model.objBilling.City</div>
                <div class="clearfix"></div>
            </div>
            <div class="detailrow">
                <div>@Resources.Econsultation_Add_Country</div>
                <div class="colonspace">:</div>
                <div>@Html.EnumDisplayFor(m => m.objBilling.BillingCountry)</div>
                <div class="clearfix"></div>
            </div>
            <div class="detailrow">
                <div>@Resources.Econsultation_Add_State</div>
                <div class="colonspace">:</div>
                <div>@Html.EnumDisplayFor(m => m.objBilling.BillingState)</div>
                <div class="clearfix"></div>
            </div>
            <div class="detailrow">
                <div>@Resources.Econsultation_Add_Zip</div>
                <div class="colonspace">:</div>
                <div>@Model.objBilling.Zip</div>
                <div class="clearfix"></div>
            </div>
            <hr>
            <div class="form-group">
                <div class="col-md-6">
                    <a href="@Url.Action("Index", "Econsultation")" class="btn btn-warning btn-lg pull-right">@Resources.Econsultation_Add_Cancel</a>
                </div>
                <div class="col-md-6">
                    <button id="purchase-bt" type="button" class="btn btn-success btn-lg">@Resources.Econsultation_Add_Purchase <i class="fa fa-shopping-cart"></i></button>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
}
<script src="@Url.Content("~/Scripts/customs/views/Econsultation/Confirmation.js")"></script>
