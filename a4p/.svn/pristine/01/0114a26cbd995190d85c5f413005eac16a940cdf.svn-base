@using Resources = ADOPets.Web.Resources.Wording
@model ADOPets.Web.ViewModels.Insurance.DeleteViewModel

<div class="modal-dialog">

    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">@Resources.Insurance_Delete_Message</h4>
        </div>

        <div class="modal-body">
            <div style="overflow-x: auto; height: auto; padding-right: 10px;">
                <table width="100%" border="0" cellspacing="0" cellpadding="0">
                    <tr>
                        <td width="30%" align="right"><strong>@Html.LabelFor(model => model.Name, new { @class = "control-label" })</strong></td>
                        <td width="10%" align="center">:</td>
                        <td width="70%">@Model.Name</td>
                    </tr>

                    <tr>
                        <td width="30%" align="right"><strong>@Html.LabelFor(model => model.AccountNumber, new { @class = "control-label" })</strong></td>
                        <td width="10%" align="center">:</td>
                        <td width="70%">@Model.AccountNumber</td>
                    </tr>

                    <tr>
                        <td width="30%" align="right"><strong>@Html.LabelFor(model => model.StartDate, new { @class = "control-label" })</strong></td>
                        <td width="10%" align="center">:</td>
                        <td width="70%">@if (Model.StartDate.HasValue)
                                        {@Model.StartDate.Value.ToShortDateString()}</td>
                    </tr>

                    <tr>
                        <td width="30%" align="right"><strong>@Html.LabelFor(model => model.EndDate, new { @class = "control-label" })</strong></td>
                        <td width="10%" align="center">:</td>
                        <td width="70%">@if (Model.EndDate.HasValue)
                                        {@Model.EndDate.Value.ToShortDateString()}</td>
                    </tr>

                    <tr>
                        <td width="30%" align="right"><strong>@Html.LabelFor(model => model.Phone, new { @class = "control-label" })</strong></td>
                        <td width="10%" align="center">:</td>
                        <td width="70%">@Model.Phone</td>
                    </tr>

                    <tr>
                        <td width="30%" align="right"><strong>@Html.LabelFor(model => model.Comment, new { @class = "control-label" })</strong></td>
                        <td width="10%" align="center">:</td>
                        <td width="70%">@Html.Raw("<pre>" + Model.Comment + "</pre>")</td>
                    </tr>

                    <tr>
                        <td width="30%" align="right"><strong>@Html.LabelFor(model => model.NotificationMail, new { @class = "control-label" })</strong></td>
                        <td width="10%" align="center">:</td>
                        <td width="70%">@if (Model.NotificationMail)
                                        {@Resources.Insurance_Delete_Yes }
                                        else
                                        {@Resources.Insurance_Delete_No}</td>
                    </tr>
                </table>

            </div>
        </div>

        @using (Ajax.BeginForm("Delete", "Insurance", new AjaxOptions
        {
            UpdateTargetId = "insuranceList",
            HttpMethod = "POST",
            InsertionMode = InsertionMode.Replace,
            OnSuccess = "CloseDialogInsurance"
        }))
        {
            @Html.AntiForgeryToken()

            @Html.HiddenFor(m => m.PetId)
            @Html.HiddenFor(m => m.Id)
            
            <div class="modal-footer">
                <button type="submit" class="btn btn-warning">@Resources.Insurance_Delete_SaveChanges</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">@Resources.Insurance_Delete_Cancel</button>
            </div>
        }

    </div>
</div>
