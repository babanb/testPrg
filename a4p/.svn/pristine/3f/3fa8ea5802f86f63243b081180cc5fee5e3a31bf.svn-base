@using Resources = ADOPets.Web.Resources.Wording
@model ADOPets.Web.ViewModels.Profile.VetExpert
@using ADOPets.Web.Common.Extensions

<link href="@Url.Content("~/Content/css/flaticon.css")" rel="stylesheet">
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">@Resources.Profile_Index_btnClose</span></button>
            <h4 class="modal-title" id="myModalLabel">@Resources.Profile_Index_lblExpertResponse</h4>
        </div>
        <div class="modal-body">
            @Html.TextAreaFor(modelItem => modelItem.ExpertResponse, new { @class = "form-control", disabled = "disabled", style = "min-height:95px;" })
        </div>
        <div class="modal-footer attachment2">
           <div class="col-md-2"><strong>@Resources.Smo_Edit_Attachedfile :</strong></div>
                <div class="col-md-10">

                @foreach (var item in Model.lstAttachment)
                {   <div class="btn-group">
                    <a href="@Url.Action("GetFile", "SMO", new { fileName = @item.DocumentPath, ownerId = @item.UserId })" target="_blank" id="@("viewDocument" + ViewBag.DocumentType)" class="btn btn-default">
                        @Html.CreateDivFromFileExtension(item.DocumentPath) @item.DocumentName
                    </a></div>
                }
            </div>
        </div>
    </div>
</div>
