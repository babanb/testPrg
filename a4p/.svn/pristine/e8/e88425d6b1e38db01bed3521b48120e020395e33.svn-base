@using Resources = ADOPets.Web.Resources.Wording
@model ADOPets.Web.ViewModels.SMO.ExpertBio

@Html.Hidden("UrlAddBiodataExpert", Url.Action("SaveBioForExpert", "SMO"))
@Html.HiddenFor(model => model.userId, new { id = "vetExpertId" })
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">@Resources.Profile_Index_btnClose</span></button>
            <h4 class="modal-title" id="myModalLabel">@Resources.Profile_Index_lblAddsomethingaboutexpert</h4>
        </div>
        <div class="modal-body">
            @Html.TextAreaFor(m => m.ExpertComment, new { @class = "form-control", @id = "txtcomments", @placeholder = Resources.Profile_Index_EnteryourcommentsherePlaceHolder })
        </div>
        <div class="modal-footer">
            <button type="button" id="btnCloseBioData" class="btn btn-default" data-dismiss="modal">@Resources.Profile_Index_btnClose</button>
            <button type="button" id="btnSaveBioData" class="btn btn-primary">@Resources.Profile_Index_btnSaveChanges</button>
        </div>
    </div>
</div>

