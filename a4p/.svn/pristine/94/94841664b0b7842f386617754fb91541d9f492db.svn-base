@model  ADOPets.Web.ViewModels.SMO.AddSetupViewModel
@using ADOPets.Web.Common.Extensions
@using ADOPets.Web.Common.Helpers
@using Model
@using Resources = ADOPets.Web.Resources.Wording;
@if (Model.Investigations != null)
{
    if (Model.Investigations.Count > 0)
    {
    <table class="table table-striped" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th width="50%">@Resources.Smo_Add_TestName</th>
                <th width="25%">@Resources.Smo_Add_TestDate</th>
                <th width="25%">@Resources.Smo_Add_Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Investigations)
            {            
                <tr>
                    <td>@Html.DisplayFor(m => item.TestDescription)</td>
                    <td>@{var testdate = Convert.ToDateTime(item.TestDate).ToShortDateString();}@testdate</td>
                    <td>
                        <a href="#" onclick="showEditTestDiv('@(item.ID)');" class="btn btn-success showeditModel" data-tooltip="tooltip" data-placement="top" title="@Resources.Smo_Add_Edit"><i class="fa fa-pencil"></i></a>
                        <a href="#" onclick="callDeleteConfirmTest('@(item.ID)');"  class="btn btn-warning opendelete" data-tooltip="tooltip" data-placement="top" title="@Resources.Smo_Add_Delete"><i class="fa fa-trash-o"></i></a>
                    </td>
                </tr>                                            
            }
        </tbody>
    </table>
    }
}
