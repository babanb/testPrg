@using Resources = ADOPets.Web.Resources.Wording
@model ADOPets.Web.ViewModels.SharePetInfo.DeleteContactViewModel

<div class="modal-dialog" style="width: 50%;">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h4 class="modal-title" id="myModalLabel">@Resources.SharedPetInfo_DeleteContact_ModelTitle</h4>
        </div>
        @using (Html.BeginForm("DeleteContact", "SharePetInfo", FormMethod.Post, new { @id = "addContactForm", @class = "form-horizontal defaultForm", @role = "form" }))
        {      
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.UserId) 
            @Html.HiddenFor(m => m.ContactId) 
            @Html.HiddenFor(m => m.Id)            
            <div class="modal-body">
                <label for="Subject" class="col-sm-9 control-label">@Resources.SharedPetInfo_DeleteContact_StatusConfirmationMessage</label>
                <br />
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">@Resources.SharedPetInfo_DeleteContact_SubmitButton</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">@Resources.SharedPetInfo_DeleteContact_CloseButton</button>
            </div>
        }
    </div>
</div>
