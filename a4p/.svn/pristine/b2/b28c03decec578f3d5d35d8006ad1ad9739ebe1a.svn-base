@model ADOPets.Web.ViewModels.Profile.PaymentResultViewModel
@using Resources = ADOPets.Web.Resources.Wording


<div id="pageTitle">
    <div class="row">
        <div class="col-md-6">
            <h1>@Resources.Profile_OwnerDetail_MyAccount</h1>
        </div>
        <div class="col-md-6">
        </div>
    </div>
</div>
<div id="mainContainer">
    <div id="hiderightsidebar">
        <img src="../Content/images/hide-img.png" width="22" height="34" alt="" />
    </div>
    <div id="showrightsidebar">
        <img src="../Content/images/show-img.png" width="22" height="34" alt="" />
    </div>

    <div class="tab-content">
        <div class="tab-pane fade in active">

                <div class="columnfull first">
                    <div class="row">
                        <div class="col-lg-12">
                            <div id="thankU">
                                @if (Model.Success)
                                {

                                    <div class="row">
                                        <div class="col-sm-offset-3">
                                            <h2 style="margin-left: 30px;">@Resources.Profile_PlanEdit_ThankYou</h2>
                                            <h5 class="text-warning" style="margin-left: 30px; line-height: 20px; margin-right: 20px;">
                                                @if (Model.Action == "Addpets")
                                                {
                                                    @Resources.Profile_PlanAddPets_ThankyouMessage
                                                }
                                                else if (Model.Action == "renew")
                                                {
                                                    @Resources.Profile_PlanRenewPlan_ThankyouMessage
                                                }
                                                else if (Model.Action == "upgrade")
                                                {
                                                    @Resources.Profile_PlanUpgradePlan_ThankyouMessage
                                                }
                                                else if (Model.Action == "MultiTransaction")
                                                { 
                                                    @Resources.Users_OwnerBilling_RenewedPlanAddedPet
                                                }
                                                <br>
                                                @Resources.Profile_PlanEdit_EmailMsg
                                            </h5>
                                        </div>
                                        <hr>
                                        @if (Model.Action == "MultiTransaction")
                                        {
                                            <div class="detailrow">
                                                <div style="width: 35%;">@Resources.Users_OwnerBilling_CurrentPlan</div>
                                                <div class="colonspace">:</div>
                                                <div>@Session["CurrentPlan"]</div>
                                                <div class="clearfix"></div>
                                            </div>
                                            <div class="detailrow">
                                                <div style="width: 35%;">@Resources.Users_OwnerPayment_RenewPlan</div>
                                                <div class="colonspace">:</div>
                                                <div>@Session["RenewPlan"]</div>
                                                <div class="clearfix"></div>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="detailrow">
                                                <div style="width: 35%;">@Resources.Profile_PlanEdit_Plan</div>
                                                <div class="colonspace">:</div>
                                                <div>@Model.SubscriptionPlan</div>
                                                <div class="clearfix"></div>
                                            </div>
                                        }
                                        <div class="detailrow">
                                            <div style="width: 35%;">@Resources.Profile_PlanEdit_TransactionDate</div>
                                            <div class="colonspace">:</div>
                                            <div>@Model.TransactionDate</div>
                                            <div class="clearfix"></div>
                                        </div>

                                        <div class="detailrow">
                                            <div style="width: 35%;">@Resources.Profile_PlanEdit_OrderNumber</div>
                                            <div class="colonspace">:</div>
                                            <div>@HttpContext.Current.Session["reference"]</div>
                                            <div class="clearfix"></div>
                                        </div>
                                      

                                        <div class="clearfix"></div>
                                        <br>
                                        <div class="col-sm-offset-5 col-sm-6">
                                            <a href="@Url.Action("Index", "Pet")" class="btn btn-success">@Resources.Profile_PlanEdit_BackToHome<i class="fa fa-long-arrow-right"></i></a>
                                        </div>
                                    </div>

                                }
                                else
                                {
                                    <div class="row">
                                        <div class="col-sm-offset-3">
                                            <h4 class="text-warning">@Model.ErrorMsg</h4>
                                            <a href="@Url.Action("OwnerDetail", "Profile")" class="btn btn-success">@Resources.Profile_PlanEdit_TryAgain<i class="fa fa-long-arrow-right"></i></a>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                    </div>
                </div>
</div>
        </div>
    </div>


<script src="~/Scripts/customs/views/Profile/PaymentResult.js"></script>
