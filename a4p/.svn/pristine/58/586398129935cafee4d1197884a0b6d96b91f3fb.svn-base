@using Resources = ADOPets.Web.Resources.Wording
@model ADOPets.Web.ViewModels.Econsultation.ViewDetailsModel
@using ADOPets.Web.Common.Extensions
@using ADOPets.Web.Common.Helpers
@using Model
@{
    int EStatusId = Convert.ToInt16(TempData["EconsultStatusId"]);
    int EStatusFlag = Convert.ToInt16(TempData["StatusModified"]);   
    var ContactValue = "";
}
<div class="clearfix"></div>
<div id="content">
    <div id="pageTitle">
        <div class="row">
            <div class="col-md-8">
                <h1>EC @Model.Id</h1>
            </div>
            <div class="col-md-4"><a href="@Url.Action("Index", "Econsultation")" class="btn btn-primary pull-right"><i class="fa fa-angle-left"></i>@Resources.Econsultation_Add_Back</a> </div>
        </div>
    </div>
    <div id="mainContainer">
        <div id="hiderightsidebar">
            <img src="@Url.Content("~/Content/images/hide-img.png")" width="22" height="34" alt="" />
        </div>
        <div id="showrightsidebar">
            <img src="@Url.Content("~/Content/images/show-img.png")" width="22" height="34" alt="" />
        </div>
        <div id="cover4econsult">
            <center><div id="econsultdetailtab" class="radius3"><h3>@Model.date.Date.ToLongDateString() | @Model.time.ToShortTimeString()</h3>
          <span>@Resources.Econsultation_Add_PetName - @Model.Name | 
              @Resources.Econsultation_Index_Condition - @Model.Condition | 
              @Resources.Econsultation_Add_Status -@Model.Status </span></div></center>

            <div class="clearfix"></div>
        </div>
        <div id="econsultConfirm">
            <h4>
                <span class="pull-left">@Resources.Econsultation_Add_SetupInformation</span>
                @if (EStatusId <= 3 && EStatusFlag == 1)
                {
                    <a href="@Url.Action("EditDetails", "Econsultation", new { ecId = @Model.Id })" class="pull-right" id="editEconsultation" data-toggle="modal" data-placement="" title="" data-original-title=" @Resources.Econsultation_Add_Edit">
                    <i class="fa fa-pencil">@Resources.Econsultation_Index_Schedule</i></a>
                }
                <div class="clearfix"></div>
            </h4>
            <div class="columnfull">

                <div class="detailrow">
                    <div>@Resources.Econsultation_Add_PetName</div>
                    <div class="colonspace">:</div>
                    <div>@Model.Name</div>
                    <div class="clearfix"></div>
                </div>

                <div class="detailrow">
                    <div>@Resources.Econsultation_View_ECID</div>
                    <div class="colonspace">:</div>
                    <div>EC-@Model.Id</div>
                    <div class="clearfix"></div>
                </div>

                <div class="detailrow">
                    <div>@Resources.Econsultation_Add_CountryOfEconsultation</div>
                    <div class="colonspace">:</div>
                    <div>@Html.EnumDisplay(Model.Country)</div>
                    <div class="clearfix"></div>
                </div>

                <div class="detailrow">
                    <div>@Resources.Econsultation_Add_TimeZoneOfEconsultation</div>
                    <div class="colonspace">:</div>
                    <div>@Html.EnumDisplay(Model.TimeZone)</div>
                    <div class="clearfix"></div>
                </div>

                <div class="detailrow">
                    <div>@Resources.Econsultation_Add_DayOfEconsultation</div>
                    <div class="colonspace">:</div>
                    <div>@Model.date.ToShortDateString()</div>
                    <div class="clearfix"></div>
                </div>

                <div class="detailrow">
                    <div>@Resources.Econsultation_Add_TimeOfEconsultation</div>
                    <div class="colonspace">:</div>
                    <div>@Model.time.ToShortTimeString()
                    </div>
                    <div class="clearfix"></div>
                </div>

                <div class="detailrow">
                    <div>@Resources.Econsultation_Add_Status</div>
                    <div class="colonspace">:</div>
                    <div>@Html.EnumDisplay(Model.Status)

                    </div>
                    <div class="clearfix"></div>
                </div>

                <div class="detailrow">
                    <div>@Resources.Econsultation_Add_ContactType</div>
                    <div class="colonspace">:</div>
                    <div>
                        @if(Model.ContactType.HasValue)
                        {
                            ContactValue = Model.ContactType + "-" + Model.ContactValue;
                        }
                        @ContactValue
                    </div>
                    <div class="clearfix"></div>
                </div>

                <div class="detailrow">
                    <div>@Resources.Econsultation_Add_PetCondition</div>
                    <div class="colonspace">:</div>
                    <div>@Model.Condition</div>
                    <div class="clearfix"></div>
                </div>

                <div class="detailrow">
                    <div>@Resources.Econsultation_Add_SymptomsOfPet</div>
                    <div class="colonspace">:</div>
                    <div>1- @Model.Symtom1<br>
                        2- @Model.Symtom2<br>
                        3- @Model.Symtom3</div>
                    <div class="clearfix"></div>

                    <div class="clearfix"></div>
                </div>

            </div>

            <h4>
                <span class="pull-left">@Resources.Econsultation_Add_AssignVet</span>
                <div class="clearfix"></div>
            </h4>

            <!--########row 1#########-->
            <div class="listing">
                <div class="row">
                    <div class="col-md-10">
                        <img src="@Url.Action("GetImage", "Message", new { fromUserId = Model.VetId })" class="img-responsive" />

                        <p>
                            <strong>@Resources.Veterinarian_Add_FirstName</strong> : <span>@Model.VetFirstName</span><br>
                            <strong>@Resources.Veterinarian_Add_LastName </strong> : <span>@Model.VetLastName</span><br>
                            <strong>@Resources.Veterinarian_Add_Email</strong> : <span>@Model.VetEmail</span><br>
                            <strong>@Resources.Veterinarian_Add_VetSpecialities</strong> : <span>@Html.EnumDisplay(Model.VetSpecility)</span>
                        </p>
                    </div>
                    <div class="col-md-2 listing-control">
                        <a href="#" class="btn btn-primary" data-tooltip="tooltip" data-placement="top" data-original-title="@Resources.Econsultation_View_Details"><i class="fa fa-eye"></i></a>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>

        </div>
        <div id="editModalEconsultation" class="modal fade" tabindex="-1" aria-labelledby="myModalLabel" role="dialog" aria-hidden="true"></div>
    </div>
    <div class="clearfix"></div>
</div>
<script src="~/Scripts/customs/views/Econsultation/ViewDetails.js"></script>
