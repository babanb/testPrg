@using ADOPets.Web.Common.Extensions
@using ADOPets.Web.Common.Helpers
@using Model
@model ADOPets.Web.ViewModels.Econsultation.PaymentResultViewModel1
@using Resources = ADOPets.Web.Resources.Wording 


<script>

    document.getElementById("Setup").style.display = 'none';
    document.getElementById("Billing").style.display = 'none';
    document.getElementById("Confirmation").style.display = 'block';
    document.getElementById("step1").className = 'consultSteptab radius3';
    document.getElementById("step2").className = 'consultSteptab radius3';
    document.getElementById("step3").className = 'consultSteptab radius3 active';

    document.getElementById("step1").removeAttribute("onclick");
    document.getElementById("step2").removeAttribute("onclick");
   
</script>

<div class="row">
    <div class="col-lg-12">
        <div id="thankU">
            @if (Model.Success)
            {
                <div class="row">
                    <div>
                        <h2 style="margin-left: 30px;">@Resources.Econsultation_Add_ThankYou</h2>
                        <h5 class="text-warning" style="margin-left: 30px; line-height: 20px; margin-right: 20px;">@Resources.Econsultation_Add_AddSuccessfullMessage
                            <br>
                            @Resources.Econsultation_Add_EmailMsg</h5>
                        <hr>
                        <table width="100%" border="0" cellspacing="0" cellpadding="0" style="margin-left: 30px; margin-right: 20px;">
                            <tr>
                                <td align="left" valign="top"><strong>@Resources.Econsultation_Add_Product  :</strong></td>
                                <td align="center" valign="top" style="padding-left: 10px; padding-right: 10px;"></td>
                                <td valign="top">E-Consultation</td>
                            </tr>
                            <tr>
                                <td align="left" valign="top"><strong>@Resources.Econsultation_Add_EC_ID  :</strong></td>
                                <td align="center" valign="top" style="padding-left: 10px; padding-right: 10px;"></td>
                                <td valign="top">@Model.ECID</td>
                            </tr>

                            <tr>
                                <td align="left" valign="top"><strong>@Resources.Econsultation_Add_Price  :</strong></td>
                                <td align="center" valign="top" style="padding-left: 10px; padding-right: 10px;"></td>
                                <td valign="top">@DomainHelper.GetCurrency()25</td>
                            </tr>

                            <tr>
                                <td align="left" valign="top"><strong>@Resources.Econsultation_Add_Date  :</strong></td>
                                <td align="center" valign="top" style="padding-left: 10px; padding-right: 10px;"></td>
                                <td valign="top">@Model.TransactionDate</td>
                            </tr>

                            <tr>
                                <td align="left" valign="top"><strong>@Resources.Econsultation_Add_Order_Number  :</strong></td>
                                <td align="center" valign="top" style="padding-left: 10px; padding-right: 10px;"></td>
                                <td valign="top">@Model.OrderNumber</td>
                            </tr>

                            <tr>
                                <td align="left" valign="top"><strong>@Resources.Econsultation_Add_Message  :</strong></td>
                                <td align="center" valign="top" style="padding-left: 10px; padding-right: 10px;"></td>
                                <td valign="top">@Model.TransactionResult</td>
                            </tr>


                            <tr>
                                <td align="left" valign="top"></td>
                                <td align="center" valign="top" style="padding-left: 10px; padding-right: 10px;"></td>
                                <td valign="top">
                                    <br>
                                    <a href="@Url.Action("Index", "Econsultation")" class="btn btn-success"><i class="fa fa-long-arrow-left"></i>@Resources.Econsultation_Add_BackEconsultation </a>
                                    <br>
                                    <br>
                                </td>
                            </tr>
                        </table>

                    </div>

                </div>
            }
            else
            {
                <div class="row">
                    <div class="col-md-8">
                        <h4 class="text-warning">@Model.ErrorMsg</h4>
                        <h4 class="text-warning">@Model.TransactionResult</h4>
                        <a href="@Url.Action("Index", "Econsultation")" class="btn btn-success">@Resources.Econsultation_Add_TryAgain<i class="fa fa-long-arrow-right"></i></a>
                    </div>
                </div>
            }
        </div>
    </div>

</div>
