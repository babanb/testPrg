@using Resources = ADOPets.Web.Resources.Wording
@using Model
@model ADOPets.Web.ViewModels.PlansAndPromo.AddViewModel
@using ADOPets.Web.Common.Extensions

<div id="pageTitle">
    <div class="row">
        <div class="col-md-6">
            <h1>@Resources.PlanAndPromo_Add_Title</h1>
        </div>
        <div class="col-md-6">
            <a href="@Url.Action("Index", "PlansAndPromo")" class="btn btn-primary pull-right"><i class="fa fa-angle-left"></i>@Resources.PlanAndPromo_Add_Back</a>
        </div>
    </div>
</div>
<div id="mainContainer">
    <div id="myAccount">
        <a href="javascript:void(0)" class="active">@Resources.PlanAndPromo_Add_PlanTitle <i class="fa fa-angle-right"></i></a>
        <a href="@Url.Action("AddPromocode", "PlansAndPromo")">@Resources.PlanAndPromo_Add_PromocodeTitle <i class="fa fa-angle-right"></i></a>
        <a href="@Url.Action("RenewUpgradePlan", "PlansAndPromo")">@Resources.PlanAndPromo_Add_PlanRenewalTitle</a>
        <div class="clearfix"></div>
    </div>
    @using (Html.BeginForm("AddPlan", "PlansAndPromo", FormMethod.Post, new { @id = "AddPlanForm", @class = "form-horizontal defaultForm bv-form" }))
    {
        @Html.AntiForgeryToken()
        <div class="panel panel-info col-md-12 col-md-offset-0">
            <div class="panel-body">
                <div class="column">
                    <div class="form-group">
                        @Html.LabelRequiredFor(model => model.PlanName, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(model => model.PlanName, new { @class = "form-control", @placeholder = Resources.PlansAndPromo_Add_PlanNamePlaceholder })
                            @Html.ValidationMessageFor(model => model.PlanName)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Description, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @style = "height: 110px;", @rows = "2", @placeholder = Resources.PlansAndPromo_Add_DescriptionPlaceholder })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelRequiredFor(model => model.AdditionalInfo, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(model => model.AdditionalInfo, new { @class = "form-control", @placeholder = Resources.PlansAndPromo_Add_AdditionalInfoPlaceholder })
                            @Html.ValidationMessageFor(model => model.AdditionalInfo)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.IsTrial, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            <label class="radio-inline">
                                @Html.RadioButtonFor(m => m.IsTrial, true, new { @checked = "checked", @value = Resources.PlansAndPrmo_Index_Trial_Yes })
                                @Resources.PlansAndPrmo_Index_Trial_Yes
                            </label>
                            <label class="radio-inline">
                                @Html.RadioButtonFor(m => m.IsTrial, false, new { @value = Resources.PlansAndPrmo_Index_Trial_No })
                                @Resources.PlansAndPrmo_Index_Trial_No
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelRequiredFor(model => model.TrialDuration, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(model => model.TrialDuration, new { @class = "form-control", @placeholder = Resources.PlansAndPromo_Add_TrialDurationPlaceholder })
                            @Html.ValidationMessageFor(model => model.TrialDuration)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.MaxPet, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(model => model.MaxPet, new { @class = "form-control", @placeholder = Resources.PlansAndPromo_Add_MaxPetPlaceholder })
                            @Html.ValidationMessageFor(model => model.MaxPet)

                        </div>
                    </div>
                </div>
                <div class="column">
                    <div class="form-group">
                        @Html.LabelRequiredFor(model => model.PaymentType, new { @class = "col-sm-6 control-label" })
                        <div class="col-sm-6">
                            @Html.EnumDropDownListFor(model => model.PaymentType, Resources.PlansAndPromo_Add_PaymentTypePlaceholder, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.PaymentType)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelRequiredFor(model => model.Price, new { @class = "col-sm-6 control-label" })
                        <div class="col-sm-6">
                            @Html.TextBoxFor(model => model.Price, new { @class = "form-control", @placeholder = Resources.PlansAndPromo_Add_PricePlaceholder })
                            @Html.ValidationMessageFor(model => model.Price)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelRequiredFor(model => model.AdditionalPrice, new { @class = "col-sm-6 control-label" })
                        <div class="col-sm-6">
                            @Html.TextBoxFor(model => model.AdditionalPrice, new { @class = "form-control", @placeholder = Resources.PlansAndPromo_Add_AdditionalPricePlaceholder })
                            @Html.ValidationMessageFor(model => model.AdditionalPrice)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelRequiredFor(model => model.SMOPrice, new { @class = "col-sm-6 control-label" })
                        <div class="col-sm-6">
                            @Html.TextBoxFor(model => model.SMOPrice, new { @class = "form-control", @placeholder = Resources.PlansAndPromo_Add_SMOPricePlaceholder })
                            @Html.ValidationMessageFor(model => model.SMOPrice)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelRequiredFor(model => model.ECPrice, new { @class = "col-sm-6 control-label" })
                        <div class="col-sm-6">
                            @Html.TextBoxFor(model => model.ECPrice, new { @class = "form-control", @placeholder = Resources.PlansAndPromo_Add_ECPricePlaceholder })
                            @Html.ValidationMessageFor(model => model.ECPrice)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.MRAPrice, new { @class = "col-sm-6 control-label" })
                        <div class="col-sm-6">
                            @Html.TextBoxFor(model => model.MRAPrice, new { @class = "form-control", @placeholder = Resources.PlansAndPromo_Add_MRAPricePlaceholder })
                            @Html.ValidationMessageFor(model => model.MRAPrice)

                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Note, new { @class = "col-sm-6 control-label" })
                        <div class="col-sm-6">
                            @Html.TextAreaFor(model => model.Note, new { @class = "form-control", @rows = "2", @placeholder = Resources.PlansAndPromo_Add_NotePlaceholder })
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-6">
                <a id="cancelButton" href="@Url.Action("Index", "PlansAndPromo")" class="btn btn-warning btn-lg pull-right">@Resources.Pet_Add_CancelButton</a>
            </div>
            <div class="col-md-6">
                <button type="submit" class="btn btn-success btn-lg">@Resources.PlansAndPromo_Add_Continue</button>
            </div>
        </div>
    }
</div>
<div class="clearfix"></div>
<script src="@Url.Content("~/Scripts/customs/views/PlansAndPromo/AddPlan.js")"></script>
