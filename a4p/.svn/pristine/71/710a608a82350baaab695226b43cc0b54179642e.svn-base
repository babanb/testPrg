@using ADOPets.Web.Common.Extensions
@using Resources = ADOPets.Web.Resources.Contact.Edit
@model ADOPets.Web.ViewModels.Contact.EditViewModel
@using Model

@{    ViewBag.Title = Resources.Title;  }

<div id="pageTitle">
    <div class="row">
        <div class="col-md-6">
            <h1>@Resources.Title</h1>
        </div>
        <div class="col-md-6">
            <a href="@Url.Action("Index", "Contact")" class="btn btn-primary pull-right">
                <i class="fa fa-angle-left"></i><span class="hidden-md">@Resources.BackButton</span>
            </a>
        </div>
    </div>
</div>

<div id="mainContainer">
    <div id="hiderightsidebar">
        <img src="@Url.Content("~/Content/images/hide-img.png")" width="22" height="34" alt=""/>
    </div>
    <div id="showrightsidebar">
         <img src="@Url.Content("~/Content/images/show-img.png")" width="22" height="34" alt="" />
    </div>
    @using (Html.BeginForm("Edit", "Contact", FormMethod.Post, new { @id = "ContactForm", @class = "form-horizontal defaultForm", @role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.UserId)
       
        <div class="column animated fadeInLeft">
            <div class="form-group">
                <strong>
                    @Html.LabelRequiredFor(model => model.FirstName, new { @class = "col-md-4 control-label" })
                </strong>
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", placeholder = Resources.FirstNamePlaceHolder })
                    @Html.ValidationMessageFor(model => model.FirstName)
                </div>
            </div>

            <div class="form-group">
                <strong>
                    @Html.LabelFor(model => model.MiddleName, new { @class = "col-md-4 control-label" })
                </strong>
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.MiddleName, new { @class = "form-control", placeholder = Resources.MiddleNamePlaceHolder })
                </div>
            </div>

            <div class="form-group">
                <strong>
                    @Html.LabelRequiredFor(model => model.LastName, new { @class = "col-md-4 control-label" })
                </strong>
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", placeholder = Resources.LastNamePlaceHolder })
                    @Html.ValidationMessageFor(model => model.LastName)
                </div>
            </div>

            <div class="form-group">
                <strong>
                    @Html.LabelRequiredFor(model => model.Relationship, new { @class = "col-md-4 control-label" })
                </strong>
                <div class="col-md-8">
                    @Html.EnumDropDownListFor(model => model.Relationship, new List<ContactTypeEnum> { ContactTypeEnum.Owner, ContactTypeEnum.Veterinarian }, Resources.RelationshipPlaceHolder, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Relationship)
                </div>
            </div>

            <div class="form-group">
                <strong>
                    @Html.LabelFor(model => model.Email, new { @class = "col-md-4 control-label" })
                </strong>
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = Resources.EmailPlaceHolder })
                    @Html.ValidationMessageFor(model => model.Email)
                </div>
            </div>

        </div>
        <div class="column animated fadeInLeft">

            <div class="form-group">
                <strong>
                    @Html.LabelFor(model => model.Home, new { @class = "col-md-4 control-label" })
                </strong>
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.Home, new { @class = "form-control", placeholder = Resources.HomePlaceHolder })
                    @Html.ValidationMessageFor(model => model.Home)
                </div>
            </div>

            <div class="form-group">
                <strong>
                    @Html.LabelFor(model => model.Office, new { @class = "col-md-4 control-label" })
                </strong>
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.Office, new { @class = "form-control", placeholder = Resources.OfficePlaceHolder })
                    @Html.ValidationMessageFor(model => model.Office)
                </div>
            </div>

            <div class="form-group">
                <strong>
                    @Html.LabelFor(model => model.Cell, new { @class = "col-md-4 control-label" })
                </strong>
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.Cell, new { @class = "form-control", placeholder = Resources.CellPlaceHolder })
                    @Html.ValidationMessageFor(model => model.Cell)
                </div>
            </div>

            <div class="form-group">
                <strong>
                    @Html.LabelFor(model => model.Fax, new { @class = "col-md-4 control-label" })
                </strong>
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.Fax, new { @class = "form-control", placeholder = Resources.FaxPlaceHolder })
                    @Html.ValidationMessageFor(model => model.Fax)
                </div>
            </div>

        </div>      
        <div class="clearfix"></div>
        <hr>
        <div class="column animated fadeInLeft">
            <a href="@Url.Action("Index", "Contact")" class="btn btn-warning btn-lg pull-right" style="margin-left: 15px;">@Resources.Cancel</a>
        </div>
        <div class="column animated fadeInLeft">
            <button id="btnSaveChanges" type="submit" class="btn btn-success btn-lg" style="margin-left: 15px;">@Resources.OKButton</button>
        </div>           
        <div class="clearfix"></div>    
    }
</div>
<div class="clearfix"></div>

<script src="@Url.Content("~/Scripts/customs/views/Contact/NumberFormat.js")"></script>
