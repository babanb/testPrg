@using Model
@using Resources = ADOPets.Web.Resources.Wording
@model ADOPets.Web.ViewModels.Vitals.VitalsViewModel

<ol class="breadcrumb mrbreadcrumb vitalsnav">
        <li class="btn-group">
            <a href='#@HealthMeasureTypeEnum.Height' data-toggle="pill" class="btn btn-default btn-success btn-sm active">@Resources.Vitals_Index_Height</a>
            <a href='#@HealthMeasureTypeEnum.Weight' data-toggle="pill" class="btn btn-default btn-sm">@Resources.Vitals_Index_Weight</a>
            <a href='#@HealthMeasureTypeEnum.Temperature' data-toggle="pill" class="btn btn-default btn-sm">@Resources.Vitals_Index_Temperature</a>
            <a href='#@HealthMeasureTypeEnum.Pulse' data-toggle="pill" class="btn btn-default btn-sm">@Resources.Vitals_Index_Pulse</a>
        </li>
    </ol>
<div class="tab-content">
    <div class="tab-pane active vitals-tabs" id='@HealthMeasureTypeEnum.Height'>
        @{ Html.RenderPartial("~/Views/Height/_Index.cshtml", Model.Height); }
    </div>

    <div class="tab-pane vitals-tabs" id='@HealthMeasureTypeEnum.Weight'>
        @{ Html.RenderPartial("~/Views/Weight/_Index.cshtml", Model.Weight); }
    </div>

    <div class="tab-pane vitals-tabs" id='@HealthMeasureTypeEnum.Temperature'>
        @{ Html.RenderPartial("~/Views/Temperature/_Index.cshtml", Model.Temperature); }
    </div>
    <div class="tab-pane vitals-tabs" id='@HealthMeasureTypeEnum.Pulse'>
        @{ Html.RenderPartial("~/Views/Pulse/_Index.cshtml", Model.Pulse); }
    </div>
</div>



