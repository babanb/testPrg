@using Resources = ADOPets.Web.Resources.Wording;
@model List<ADOPets.Web.ViewModels.Profile.NewPlanRenewViewModel>

<div id="pageTitle">
    <div class="row">
        <div class="col-md-6">
            <h1>@Resources.Profile_PlanDetail_RenewalPlan</h1>
        </div>

        <div class="col-sm-6 text-right">
            <a href="@Url.Action("OwnerDetail", "Profile")" class="btn btn-primary">@Resources.Profile_PlanDetail_MyPlan</a>
        </div>
    </div>
</div>
<div id="mainContainer">
    <div id="hiderightsidebar">
        <img src="~/Content/images/hide-img.png" width="22" height="34" alt="" />
    </div>
    <div id="showrightsidebar">
        <img src="~/Content/images/show-img.png" width="22" height="34" alt="" />
    </div>
    <div id="dvREnewalInfo">
        <form class="form-horizontal">
            <div class="form-group">
                <label for="" class="col-sm-3 control-label">@Resources.Profile_PlanDetail_Promocode</label>
                <div class="col-sm-6">
                    <input type="text" id="txtPromoCode" class="form-control" placeholder="@Resources.PlansAndPromo_Add_PromocodePlaceholder">
                </div>
                <div class="col-sm-3 infoPopup" style="padding-left: 0;">
                    <button id="PlansByPromoCode" type="button" class="btn btn-primary">@Resources.Users_AddUser_Submit</button>
                </div>
            </div>
            <div class="alert alert-warning alert-dismissible fade in" role="alert" style="text-align: center" hidden="hidden" id="EnableTrue">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
                <strong>@Resources.Account_signupWarning </strong>@Resources.Account_signupselectplan
            </div>
        </form>

        @if (Model != null)
        {
            <h4 class="text-center bg-danger" style="padding: 10px; display: none;">@Resources.Profile_PlanEdit_NewStartDate : @Model.FirstOrDefault().StartDate.ToShortDateString(), @Resources.Profile_PlanEdit_Expirationdates : @Model.FirstOrDefault().EndDate.ToShortDateString()</h4>
        }

        <div id="dvListNewPlan">
            @Html.HiddenFor(model => model.FirstOrDefault().Promocode)

            @{ Html.RenderPartial("~/Views/Profile/_SelectPlan_Renew.cshtml"); }

        </div>

        <hr>
        <div class="form-group">
            <div class="col-sm-4" style="text-align: right;"></div>
            <div class="col-sm-8">
                <button type="button" id="btn-next" class="btn btn-success col-lg-5">@Resources.Signup_NextStep</button>

            </div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>
<script src="/Scripts/customs/views/Profile/PlanRenewal.js"></script>
