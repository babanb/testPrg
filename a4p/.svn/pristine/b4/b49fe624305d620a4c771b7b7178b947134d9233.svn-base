@using ADOPets.Web.Common.Authentication
@using ADOPets.Web.Common.Helpers
@using Resources = ADOPets.Web.Resources.Wording
@{
    Layout = null;
}
<style>
    p {
        font-size: 12px;
    }

    p, h3 {
        font-family: Arial, Helvetica, sans-serif;
    }

    .space4pera {
        height: 5px;
        display: block;
    }

    i {
        padding-right: 10px;
    }
</style>

<link href="@Url.Content("~/Content/css/bootstrap.css")" rel="stylesheet">
<link href="@Url.Content("~/Content/css/font-awesome.css")" rel="stylesheet">


<html>
<head>
    <title>@Resources.Shared_TermsAndConditions_Title</title>
</head>
<body>
    <div id="header" class="col-lg-12 col-md-12">
        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
            <a href="@Url.Action("Index", "Pet")">
                <img src="@DomainHelper.GetLogoPath()" width="224" height="71" class="img-responsive">
            </a>
        </div>
    </div>

    <div style="margin: 0 200px 50px 200px; font-size: 14px !important">

        @if (HttpContext.Current.User.Identity.IsAuthenticated && !HttpContext.Current.User.HasAcceptedTermAndConditions())
        { 
            @Html.Raw(Resources.Shared_TermsAndConditions_REVIEW_ACCEPT_TERMS_CONDITIONS)
        }

        @Html.Raw(Resources.Shared_TermsAndConditions_TERMS_AND_CONDITIONS_OF_SERVICE)
        @Html.Raw(Resources.Shared_TermsAndConditions_ACCEPTANCE_OF_TERMS_AND_CONDITIONS)
        @Html.Raw(Resources.Shared_TermsAndConditions_CHANGES_AND_MODIFICATION_TO_THESE_TERMS_AND_CONDITIONSOF_SERVICE)
        @Html.Raw(Resources.Shared_TermsAndConditions_USING_THE_SERVICE_AND_SUBMITTING_A_SUBSCRIPTION)
        @Html.Raw(Resources.Shared_TermsAndConditions_SUBSCRIPTION_AND_CANCELLATION_FEES)
        @Html.Raw(Resources.Shared_TermsAndConditions_CANCELLATION_POLICY)
        @Html.Raw(Resources.Shared_TermsAndConditions_SERVICES)
        @Html.Raw(Resources.Shared_TermsAndConditions_E_Consultation)
        @Html.Raw(Resources.Shared_TermsAndConditions_SECOND_MEDICAL_OPINION_SERVICES)
        @Html.Raw(Resources.Shared_TermsAndConditions_MEDICAL_RECORDS_ASSISTANCE)
        @Html.Raw(Resources.Shared_TermsAndConditions_MEDICAL_RECORDS_DIGITALIZATION_AND_STORAGE)
        @Html.Raw(Resources.Shared_TermsAndConditions_SITE_USAGE)
        @Html.Raw(Resources.Shared_TermsAndConditions_USER_ACCOUNT_PASSWORD_AND_SECURITY)
        @Html.Raw(Resources.Shared_TermsAndConditions_INDEMNITY)
        @Html.Raw(Resources.Shared_TermsAndConditions_HEADINGS)
        @Html.Raw(Resources.Shared_TermsAndConditions_ASSIGNMENT)
        @Html.Raw(Resources.Shared_TermsAndConditions_WAIVER_AND_SEVERABILITY_OF_TERMS)
        @Html.Raw(Resources.Shared_TermsAndConditions_NO_RIGHT_OF_SURVIVORSHIP_AND_NON_TRANSFERABILITY)
        @Html.Raw(Resources.Shared_TermsAndConditions_PROPRIETARY_RIGHTS)
        @Html.Raw(Resources.Shared_TermsAndConditions_FOR_INTERNATIONAL_USERS)
        @Html.Raw(Resources.Shared_TermsAndConditions_COMPLETE_AGREEMENT)
        @Html.Raw(Resources.Shared_TermsAndConditions_USER_AND_ADC)
        @Html.Raw(Resources.Shared_TermsAndConditions_THIRD_PARTIES)
        @Html.Raw(Resources.Shared_TermsAndConditions_MODIFICATIONS)
        @Html.Raw(Resources.Shared_TermsAndConditions_APPLICABLE_LAW_DISPUTES)
        @Html.Raw(Resources.Shared_TermsAndConditions_COPYRIGHT_AND_TRADEMARKS)
        @Html.Raw(Resources.Shared_TermsAndConditions_DISCLAIMERS_AND_LIMITATIONS)
        @Html.Raw(Resources.Shared_TermsAndConditions_WARRANTIES_AND_LIMITATION_OF_LIABILITY)
        @Html.Raw(Resources.Shared_TermsAndConditions_MONITORING_OF_SITE)
        @Html.Raw(Resources.Shared_TermsAndConditions_CONTACT_ADC)

        @if (HttpContext.Current.User.Identity.IsAuthenticated && !HttpContext.Current.User.HasAcceptedTermAndConditions())
        {
            using (Html.BeginForm("Accept", "TermAndCondition"))
            {
            @Html.Hidden("ReturnUrl", ViewBag.ReturnUrl as string)
            @Html.CheckBox("Accept", false, new { style = "margin-right: 10px;", onchange = "document.getElementById('agreebtn').disabled = !this.checked;" })  @Resources.Shared_TermsAndConditions_AcceptTermAndCondition
        
            <br />
            <br />
            <input id="agreebtn" disabled="disabled" type="submit" value="@Resources.Shared_TermsAndConditions_OkButton" class="btn btn-primary" />
            }
        }
        else
        {
            <a href="@Url.Action("IndexSelector", "Base")" class="btn btn-default"><i class="fa fa-chevron-left"></i>@Resources.Shared_TermsAndConditions_GoBackToHome</a>
        }
    </div>

</body>
</html>
