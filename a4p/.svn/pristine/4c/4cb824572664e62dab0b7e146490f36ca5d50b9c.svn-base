@using Resources = ADOPets.Web.Resources.Wording

<link href="@Url.Content("~/Content/css/bootstrap.css")" rel="stylesheet">

@if (!ViewBag.IsPdfFile)
{
    @Html.ActionLink("Download", "Download", "Document", new { documentId = ViewBag.DocumentId, petId = ViewBag.PetId }, new { @class = "btn btn-primary", style = "margin: 10px 0 10px 10px" })
}

@if (ViewBag.CanDisplay)
{
    <br />
    <object style="height: 100%;width: 100%;" data="@Url.Action("LoadDocument", "Document", new { documentId = ViewBag.DocumentId, petId = ViewBag.PetId })"></object>
}

