@using Resources = ADOPets.Web.Resources.Wording
@model IEnumerable<ADOPets.Web.ViewModels.VideoGallery.IndexViewModel>
@using ADOPets.Web.Common.Helpers

<div id="galleryCate">
    <div class="btn-group">
        <a href="javascript:void(0)" data-href="@Url.Action("Index", "VideoGallery", new { petId = ViewBag.PetId })"  data-toggle="tab" class="btn btn-large btn-default active petGalleryMenu">@Resources.Gallery_Index_lVideos</a>
        <a href="javascript:void(0)" data-href="@Url.Action("Index", "PhotoGallery", new { petId = ViewBag.PetId })"  data-toggle="tab" class="btn btn-large btn-default petGalleryMenu">@Resources.Gallery_Index_lPhotos</a>
        <a href="javascript:void(0)" data-href="@Url.Action("Index", "AlbumGallery", new { petId = ViewBag.PetId })"  data-toggle="tab" class="btn btn-large btn-default petGalleryMenu">@Resources.Gallery_Index_lAlbums</a>
        @if (UserHelper.CanDeletePet(ViewBag.PetId))
        {
            if (ShareInfoHelper.IsSharedUser(ViewBag.PetId, ViewBag.UserId) || ShareInfoHelper.IsCommunityUser(ViewBag.PetId, ViewBag.UserId))
            {  
            <a href="@Url.Action("AddVideo", "VideoGallery", new { petId = ViewBag.PetId })" id="addVideoGallery" class="btn btn-large btn-success"><i class="fa fa-plus"></i>@Resources.Gallery_Index_lNew</a>
            }
        }
    </div>
</div>
<hr>
<div id="dvVideoList">
    @{Html.RenderPartial("_ListVideo"); }
</div>
<div id="addModalVideoGallery" class="modal fade" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false"></div>
<div id="editModalVideoGallery" class="modal fade" tabindex="-1" role="dialog"></div>
<div id="deleteModalVideoGallery" class="modal fade" tabindex="-1" role="dialog"></div>

<script src="@Url.Content("~/Scripts/customs/views/VideoGallery/Index.js")"></script>
