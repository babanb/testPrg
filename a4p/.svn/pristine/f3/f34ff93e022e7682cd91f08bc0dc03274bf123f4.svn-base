@using Resources = ADOPets.Web.Resources.Wording
@model ADOPets.Web.ViewModels.Calender.DeleteViewModel

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">@Resources.Calendar_Delete_Title</h4>
        </div>
        <div class="modal-body">
            <div style="overflow-x: auto; height: auto; padding-right: 10px;">
                <table width="100%" border="0" cellspacing="0" cellpadding="0">
                    <tr>
                        <td width="30%" align="right"><strong>@Html.LabelFor(model => model.Reason, new { @class = "control-label" })</strong></td>
                        <td width="10%" align="center">:</td>
                        <td width="70%">@Model.Reason</td>
                    </tr>
                    <tr>
                        <td width="30%" align="right"><strong>@Html.LabelFor(model => model.Date, new { @class = "control-label" })</strong></td>
                        <td width="10%" align="center">:</td>
                        <td width="70%">@Model.Date.ToShortDateString()</td>
                    </tr>
                    <tr>
                        <td width="30%" align="right"><strong>@Html.LabelFor(model => model.Time, new { @class = "control-label" })</strong></td>
                        <td width="10%" align="center">:</td>
                        <td width="70%">@Model.Time</td>
                    </tr>
                    <tr>
                        <td width="30%" align="right"><strong>@Html.LabelFor(model => model.Physician, new { @class = "control-label" })</strong></td>
                        <td width="10%" align="center">:</td>
                        <td width="70%">@Model.Physician</td>
                    </tr>
                    <tr>
                        <td width="30%" align="right"><strong>@Html.LabelFor(model => model.Comment, new { @class = "control-label" })</strong></td>
                        <td width="10%" align="center">:</td>
                        <td width="70%">@Html.Raw("<pre>" + Model.Comment + "</pre>")</td>
                    </tr>
                    <tr>
                        <td width="30%" align="right"><strong>@Html.LabelFor(model => model.SendNotification, new { @class = "control-label" })</strong></td>
                        <td width="10%" align="center">:</td>
                        <td width="70%">@Model.SendNotification</td>
                    </tr>
                </table>
            </div>
        </div>

        @using (Ajax.BeginForm("Delete", "Calender", new AjaxOptions
        {
            UpdateTargetId = "reminderList",
            HttpMethod = "POST",
            InsertionMode = InsertionMode.Replace,
            OnSuccess = "CloseDialogReminder"
        }))
        {
            @Html.AntiForgeryToken()

            @Html.HiddenFor(m => m.Id)
            
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">@Resources.Calendar_Delete_SaveChanges</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">@Resources.Calendar_Delete_Cancel</button>
            </div>
        }

    </div>
</div>
