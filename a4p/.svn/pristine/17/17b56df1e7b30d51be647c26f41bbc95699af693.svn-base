@using ADOPets.Web.Common.Extensions
@using Resources = ADOPets.Web.Resources.Wording
@model ADOPets.Web.ViewModels.Pet.BreederEditViewModel
@using Model

@using (Ajax.BeginForm("BreederEdit", "Pet", new AjaxOptions
        {
            UpdateTargetId = "breederdetails",
            HttpMethod = "POST",
            InsertionMode = InsertionMode.Replace,
            OnSuccess = "BreederSubmitSuccesful"
        }, new { @id = "BreederForm", @class = "form-horizontal defaultForm", @role = "form" }))
{

    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.FarmerId)
    <div class="column animated fadeInLeft">
        <div class="form-group">
            <strong>@Html.LabelRequiredFor(model => model.FarmerName, new { @class = "col-md-4 control-label" })<span class="mendetory-star">*</span></strong>
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.FarmerName, new { @id = "farmerName", @class = "form-control", placeholder = Resources.Pet_Card_FarmerNamePlaceHolder })
                @Html.ValidationMessageFor(model => model.FarmerName)
            </div>
        </div>
        <div class="form-group">
            <strong>@Html.LabelFor(model => model.FarmerAddress1, new { @class = "col-md-4 control-label" })</strong>
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.FarmerAddress1, new { @class = "form-control", placeholder = Resources.Pet_Card_Address1PlaceHolder })
                @Html.ValidationMessageFor(model => model.FarmerAddress1)
            </div>
        </div>
        <div class="form-group">
            <strong>@Html.LabelFor(model => model.FarmerAddress2, new { @class = "col-md-4 control-label" })</strong>
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.FarmerAddress2, new { @class = "form-control", placeholder = Resources.Pet_Card_Address2PlaceHolder })
            </div>
        </div>

        <div class="form-group">
            <strong>@Html.LabelFor(model => model.FarmerCountry, new { @class = "col-md-4 control-label" })</strong>
            <div class="col-md-8">
                @Html.EnumDropDownListFor(m => m.FarmerCountry, Resources.Pet_Card_FarmerCountryPlaceHolder, new { @class = "form-control" })
            </div>
        </div>
        @if (ADOPets.Web.Common.Helpers.DomainHelper.GetDomain() != DomainTypeEnum.French)
        {
            <div class="form-group">
                <strong>@Html.LabelFor(model => model.FarmerState, new { @class = "col-md-4 control-label" })</strong>
                <div class="col-md-8">
                    @Html.EnumDropDownListFor(m => m.FarmerState, Resources.Pet_Card_FarmerStatePlaceHolder, new { @class = "form-control" })
                </div>
            </div>
        }
        <div class="form-group">
            <strong>@Html.LabelFor(model => model.FarmerCity, new { @class = "col-md-4 control-label" })</strong>
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.FarmerCity, new { @class = "form-control", placeholder = Resources.Pet_Card_FarmerCityPlaceHolder })
            </div>
        </div>

        <div class="form-group">
            <strong>@Html.LabelFor(model => model.FarmerZip, new { @class = "col-md-4 control-label" })</strong>
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.FarmerZip, new { @class = "form-control", placeholder = Resources.Pet_Card_FarmerZipPlaceHolder })
                @Html.ValidationMessageFor(model => model.FarmerZip)
            </div>
        </div>

    </div>
    <div class="column animated fadeInLeft">
        <div class="form-group">
            <strong>@Html.LabelFor(model => model.FarmerHomePhone, new { @class = "col-md-4 control-label" })</strong>
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.FarmerHomePhone, new { @class = "form-control", placeholder = Resources.Pet_Card_FarmerHomePhone })
                @Html.ValidationMessageFor(model => model.FarmerHomePhone)
            </div>
        </div>
        @if (ADOPets.Web.Common.Helpers.DomainHelper.GetDomain() != DomainTypeEnum.French)
        {
            <div class="form-group">
                <strong>@Html.LabelFor(model => model.FarmerOfficePhone, new { @class = "col-md-4 control-label" })</strong>
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.FarmerOfficePhone, new { @class = "form-control", placeholder = Resources.Pet_Card_FarmerOfficePhone })
                    @Html.ValidationMessageFor(model => model.FarmerOfficePhone)
                </div>
            </div>
        }
        <div class="form-group">
            <strong>@Html.LabelFor(model => model.FarmerCellPhone, new { @class = "col-md-4 control-label" })</strong>
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.FarmerCellPhone, new { @class = "form-control", placeholder = Resources.Pet_Card_FarmerCellPhone })
                @Html.ValidationMessageFor(model => model.FarmerCellPhone)
            </div>
        </div>

        <div class="form-group">
            <strong>@Html.LabelFor(model => model.FarmerFax, new { @class = "col-md-4 control-label" })</strong>
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.FarmerFax, new { @class = "form-control", placeholder = Resources.Pet_Card_FarmerFax })
                @Html.ValidationMessageFor(model => model.FarmerFax)
            </div>
        </div>

    </div>
    <div class="clearfix"></div>
    <hr>
    <div class="column animated fadeInLeft">
        <a id="cancelBreederButton" href="@Url.Action("BreederDetail", "Pet", new { id = Model.Id })" style="margin-right:15px;" class="btn btn-warning btn-lg pull-right">@Resources.Pet_Card_CancelButton</a>
    </div> 
    <div class="column animated fadeInLeft">
        <button type="submit" class="btn btn-success btn-lg" style="margin-left: 15px;">@Resources.Pet_Card_OKButton</button>
    </div>
    <div class="clearfix"></div>
}
<script src="@Url.Content("~/Scripts/external/jquery.form.min.js")"></script>
<script src="@Url.Content("~/Scripts/customs/views/Pet/BreederEdit.js")"></script>
