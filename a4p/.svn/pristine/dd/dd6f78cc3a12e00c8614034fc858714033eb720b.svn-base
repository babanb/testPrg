@using Resources = ADOPets.Web.Resources.Wording
@model ADOPets.Web.ViewModels.Hospitalization.DeleteViewModel

<div class="modal-dialog">

    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">@Resources.Hospitalization_Delete_Message</h4>
        </div>

        <div class="modal-body">
            <div style="overflow-x: auto; height: auto; padding-right: 10px;">


                <table width="100%" border="0" cellspacing="0" cellpadding="0">
                    <tr>
                        <td width="30%" align="right"><strong>@Html.LabelFor(model => model.HospitalName, new { @class = "control-label" })</strong></td>
                        <td width="10%" align="center">:</td>
                        <td width="70%">@Model.HospitalName</td>
                    </tr>

                    <tr>
                        <td width="30%" align="right"><strong>@Html.LabelFor(model => model.Reason, new { @class = "control-label" })</strong></td>
                        <td width="10%" align="center">:</td>
                        <td width="70%">@Model.Reason</td>
                    </tr>

                    <tr>
                        <td width="30%" align="right"><strong>@Html.LabelFor(model => model.AdmissionDate, new { @class = "control-label" })</strong></td>
                        <td width="10%" align="center">:</td>
                        <td width="70%">
                            @if (Model.AdmissionDate.HasValue)
                            {   
                                @Model.AdmissionDate.Value.ToShortDateString()
                            }
                        </td>
                    </tr>

                    <tr>
                        <td width="30%" align="right"><strong>@Html.LabelFor(model => model.EndDate, new { @class = "control-label" })</strong></td>
                        <td width="10%" align="center">:</td>
                        <td width="70%">
                            @if (Model.EndDate.HasValue)
                            {
                                @Model.EndDate.Value.ToShortDateString()
                            }
                        </td>
                    </tr>

                    <tr>
                        <td width="30%" align="right"><strong>@Html.LabelFor(model => model.Comment, new { @class = "control-label" })</strong></td>
                        <td width="10%" align="center">:</td>
                        <td width="70%">@Html.Raw("<pre>" + Model.Comment + "</pre>")</td>
                    </tr>

                    <tr>
                        <td width="30%" align="right"><strong>@Html.LabelFor(model => model.UrgentCareVisit, new { @class = "control-label" })</strong></td>
                        <td width="10%" align="center">:</td>
                        <td width="70%">@if (Model.UrgentCareVisit == true)
                                        {@Resources.Hospitalization_Delete_Yes }
                                        else
                                        {@Resources.Hospitalization_Delete_No}</td>
                    </tr>
                </table>

            </div>
        </div>

        @using (Ajax.BeginForm("Delete", "Hospitalization", new AjaxOptions
        {
            UpdateTargetId = "hospitalizationList",
            HttpMethod = "POST",
            InsertionMode = InsertionMode.Replace,
            OnSuccess = "CloseDialogHospitalization"
        }))
        {
            @Html.AntiForgeryToken()

            @Html.HiddenFor(m => m.PetId)
            @Html.HiddenFor(m => m.Id)
            
            <div class="modal-footer">
                <button type="submit" class="btn btn-warning">@Resources.Hospitalization_Delete_SaveChanges</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">@Resources.Hospitalization_Delete_Cancel</button>
            </div>
        }

    </div>
</div>
