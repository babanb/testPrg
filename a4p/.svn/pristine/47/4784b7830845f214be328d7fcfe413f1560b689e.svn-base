@using Resources = ADOPets.Web.Resources.Wording
@model ADOPets.Web.ViewModels.Consultation.AddViewModel
@using ADOPets.Web.Common.Extensions

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="myModalLabel">@Resources.Consultation_Add_Title</h4>
        </div>
        @using (Ajax.BeginForm("Add", "Consultation", new AjaxOptions
                                                   {
                                                       UpdateTargetId = "consultationList",
                                                       HttpMethod = "POST",
                                                       InsertionMode = InsertionMode.Replace,
                                                       OnSuccess = "CloseDialogConsultation"
                                                   }, new { @id = "addConsultationForm", @class = "form-horizontal defaultForm", @role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="modal-body">


                @Html.HiddenFor(model => model.PetId)

                <div class="form-group">
                    @Html.LabelRequiredFor(model => model.ConsultationName, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.ConsultationName, new { @class = "form-control", placeholder = Resources.Consultation_Add_ConsultationNamePlaceHolder })
                        @Html.ValidationMessageFor(model => model.ConsultationName)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelRequiredFor(model => model.VisitDate, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-8">
                        <div class="input-group date">
                            @Html.TextBoxFor(model => model.VisitDate, new { @class = "form-control datepicker", placeholder = Resources.Consultation_Add_VisitDatePlaceHolder })
                            <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                        </div>
                        @Html.ValidationMessageFor(model => model.VisitDate)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Reason, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.Reason, new { @class = "form-control", placeholder = Resources.Consultation_Add_ReasonPlaceHolder })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Comment, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-8">
                        @Html.TextAreaFor(model => model.Comment, new { @class = "form-control", @rows = "3", placeholder = Resources.Consultation_Add_CommentPlaceHolder })
                    </div>

                </div>

            </div>
           
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">@Resources.Consultation_Add_SaveChanges</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">@Resources.Consultation_Add_Cancel</button>
            </div>
        }

    </div>
</div>
