@using Resources = ADOPets.Web.Resources.Wording
@model ADOPets.Web.ViewModels.Message.NewMessageViewModel
@using ADOPets.Web.Common.Extensions

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="myModalLabel">@Resources.Message_NewMessage_Title @Model.ToUserFullName</h4>
        </div>
        @using (Html.BeginForm("NewMessage", "Message", FormMethod.Post, new { @id = "newMessageForm", @class = "form-horizontal defaultForm", @role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="modal-body">
                @Html.HiddenFor(model => model.ToUserId)
                <div class="form-group">
                    @Html.LabelRequiredFor(model => model.Subject, new { @class = "col-sm-4 control-label" })
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.Subject, new { @class = "form-control", placeholder = Resources.Message_NewMessage_SubjectPlaceHolder })
                        @Html.ValidationMessageFor(model => model.Subject)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelRequiredFor(model => model.Body, new { @class = "col-sm-4 control-label" })
                    <div class="col-sm-8">
                        @Html.TextAreaFor(model => model.Body, new { @class = "form-control", @rows = "3", placeholder = Resources.Message_NewMessage_MessagePlaceHolder })
                        @Html.ValidationMessageFor(model => model.Body)
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">@Resources.Message_NewMessage_Send</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">@Resources.Message_NewMessage_Cancel</button>
            </div>
        }
    </div>
</div>


