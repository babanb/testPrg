@using Resources = ADOPets.Web.Resources.Wording
@model ADOPets.Web.ViewModels.Account.BasicInfoViewModel
@using ADOPets.Web.Common.Helpers
@using Model
@{
    var rightline = "";
    var rowClass = "row";
    var row1Class = "col-lg-8 col-md-8"; var main_loginbxStyle = "padding-top: 0;"; var signupStyle = "";
  if (DomainHelper.GetDomain() == DomainTypeEnum.French) {
      rightline = "border-right:0;";
      row1Class = ""; rowClass = "";
      main_loginbxStyle = "padding: 0 20% 5% 20%;";
      signupStyle = "padding-right:0;";
  }

  }
<div id="main_loginbx" style="@main_loginbxStyle">
    <div class="row">
        <link href="~/Content/css/signup.css" rel="stylesheet">
        <div>
            <div id="signup" style="@signupStyle">
                <div class="@rowClass">
                    <div class="@row1Class">
                        <section style="background: #efefe9;">
                            <div class="board" style="@rightline">
                                <h1>@Resources.Account_SignUp_Headingmain</h1>
                               @if (DomainHelper.GetDomain() == DomainTypeEnum.French) { 
                               <h3>@Resources.Account_SignUp_subheading1 <br />@Resources.Account_SignUp_subheading2</h3>
                               }else{
                                <h3>@Resources.Account_SignUp_subheading</h3>
                               }
                                <div class="board-inner">
                                    <ul class="nav nav-tabs" id="myTab">
                                        <div class="liner"></div>
                                        <li class="active" id="signupStep1"><a href="javascript:void(0)"  title="@Resources.Account_SignUp_BasicInformation"><span class="round-tabs one"><i class="glyphicon glyphicon-user"></i></span></a>
                                            <div style="font-size: 14px; margin-bottom: 15px;" class="hidden-xs hidden-sm">@Resources.Account_SignUp_BasicInformation</div>
                                        </li>
                                        <li id="signupStep2"><a href="javascript:void(0)"  title="@Resources.Account_SignUp_BillingInformation"><span class="round-tabs two"><i class="glyphicon glyphicon-credit-card"></i></span></a>
                                            <div style="font-size: 14px; margin-bottom: 15px;" class="hidden-xs hidden-sm">@Resources.Account_SignUp_BillingInformation</div>
                                        </li>
                                        <li id="signupStep3"><a href="javascript:void(0)"  title="@Resources.Account_SignUp_Confirmation"><span class="round-tabs three"><i class="glyphicon glyphicon-check"></i></span></a>
                                            <div style="font-size: 14px; margin-bottom: 15px;" class="hidden-xs hidden-sm">@Resources.Account_SignUp_Confirmation</div>
                                        </li>
                                    </ul>
                                </div>

                                <div class="tab-content">
                                    <div class="tab-pane fade in active" id="BasicInfo">
                                        @{ Html.RenderPartial("~/Views/Account/Basicinfo.cshtml"); }
                                    </div>
                                    <div class="tab-pane fade" id="Billing">
                                    </div>

                                    <div class="tab-pane fade" id="Confirmation">
                                    </div>
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                        </section>
                    </div>
                     @if (DomainHelper.GetDomain() != DomainTypeEnum.French) { 
                    <div class="col-lg-4 col-md-4 ">
                        <h4 style="color: #0075ba; margin-top: 30px;">@Resources.Account_SignUp_ReasonsToJoinADO</h4>
                        <ul style="margin: 0; padding: 0 0 20px 14px; line-height: 25px;">
                            <li>@Resources.Account_SignUp_Reason1</li>
                            <li>@Resources.Account_SignUp_Reason2</li>
                            <li>@Resources.Account_SignUp_Reason3</li>
                            <li>@Resources.Account_SignUp_Reason4</li>
                            <li>@Resources.Account_SignUp_Reason5</li>
                            <li>@Resources.Account_SignUp_Reason6</li>
                        </ul>
                        <p>
                            <span style="font-weight: 600;">@Resources.Account_SignUp_ReasonBottomLine<br>
                                <br>
                                <a href="@Url.Action("Login", "Account")" class="btn btn-success">@Resources.Account_SignUp_AlreadyMember</a> </span>
                        </p>
                    </div>
                     }
                </div>
            </div>
        </div>
    </div>
</div>

<script src="@Url.Content("~/Scripts/customs/views/Account/Signup.js")"></script>
