@using Resources = ADOPets.Web.Resources.Wording

@{
    ViewBag.Title = Resources.Link_VeterinarianLink_Title;
}

<div id="pageTitle">
    <div class="row">
        <div class="col-md-12">
            <h1>@Resources.Link_VeterinarianLink_Title</h1>
        </div>
    </div>
</div>
<div id="mainContainer">
    <div id="hiderightsidebar">
        <img src="@Url.Content("~/Content/images/hide-img.png")" width="22" height="34" alt=""/>
    </div>
    <div id="showrightsidebar">
        <img src="@Url.Content("~/Content/images/show-img.png")" width="22" height="34" alt="" />
    </div>

    <div id="linksHead">
        @Resources.Link_VeterinarianLink_VeterinariansAndAnimalHospitalsInfo
    </div>

    <div id="linksLogo">
        <a href="http://www.webvet.com/main/vetFinder" data-toggle="modal" data-target="#confirmModal" rel="nofollow" target="_blank">
            <img src="@Url.Content("~/Content/images/webvet.jpg")" class="img-thumbnail" alt="www.webvet.com" /></a>

        <a href="http://www.myveterinarian.com/avma/vclPublic/" data-toggle="modal" data-target="#confirmModal" rel="nofollow" target="_blank">
            <img src="@Url.Content("~/Content/images/myveterinarian.jpg")" class="img-thumbnail" alt="www.myveterinarian.com" /></a>
        <a href="http://www.veterinarians.com/" data-toggle="modal" data-target="#confirmModal" rel="nofollow" target="_blank">
            <img src="@Url.Content("~/Content/images/veterinarians.jpg")" class="img-thumbnail" alt="www.veterinarians.com" /></a>

        <a href="http://www.animalhospitals.com/" data-toggle="modal" data-target="#confirmModal" rel="nofollow" target="_blank">
            <img src="@Url.Content("~/Content/images/animalhospitals.jpg")" class="img-thumbnail" alt="www.animalhospitals.com" /></a>

        <a href="https://www.aaha.org/pet_owner/about_aaha/hospital_search/default.aspx" data-toggle="modal" data-target="#confirmModal" rel="nofollow" target="_blank">
            <img src="@Url.Content("~/Content/images/aaha.jpg")" class="img-thumbnail" alt="www.aaha.org" /></a>

        <a href="http://www.vcahospitals.com/main/directory" data-toggle="modal" data-target="#confirmModal" rel="nofollow" target="_blank">
            <img src="@Url.Content("~/Content/images/vcahospital.jpg")" class="img-thumbnail" alt="www.vcahospitals.com" /></a>

    </div>

    <!-- Modal -->
    <div class="modal fade" id="confirmModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">@Resources.CloseButton</span></button>
                    <h4 class="modal-title" id="myModalLabel">@Resources.Link_VeterinarianLink_Confirmation</h4>
                </div>
                <div class="modal-body">
                    @Resources.Link_VeterinarianLink_ConfirmationInfo
              </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" id="btnClose">@Resources.Link_VeterinarianLink_Close</button>
                    <button type="button" class="btn btn-primary" id="agreeBtn">@Resources.Link_VeterinarianLink_Agree</button>
                </div>
            </div>
        </div>
    </div>
</div>
