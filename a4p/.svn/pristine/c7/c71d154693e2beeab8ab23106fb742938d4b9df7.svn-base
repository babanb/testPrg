@using Resources = ADOPets.Web.Resources.Wording
@model IEnumerable<ADOPets.Web.ViewModels.Message.MessageDetailViewModel>
@using Model
<div id="pageTitle">
    <div class="row">
        <div class="col-md-6">
            <h1>@Resources.Message_MessageDetails_Message</h1>
        </div>
        <div class="col-md-6">
            <a href="@Url.Action("Index", "Message")" class="btn btn-primary pull-right">
                <i class="fa fa-angle-left"></i>@Resources.Message_MessageDetails_BackButton
            </a>
        </div>
    </div>
</div>
<div id="mainContainer">
    @if (!Roles.IsUserInRole(UserTypeEnum.VeterinarianAdo.ToString()) && !Roles.IsUserInRole(UserTypeEnum.VeterinarianLight.ToString()) && !Roles.IsUserInRole(UserTypeEnum.VeterinarianExpert.ToString()) && !Roles.IsUserInRole(UserTypeEnum.Admin.ToString()))
    {
        <div id="hiderightsidebar">
            <img src="@Url.Content("~/Content/images/hide-img.png")" width="22" height="34" alt=""/>
        </div>
        <div id="showrightsidebar">
            <img src="@Url.Content("~/Content/images/show-img.png")" width="22" height="34" alt="" />
        </div>
    }
    <h4 class="text-primary">@ViewBag.ConversationTitle</h4>
    <hr>

    @foreach (var item in Model)
    {
        <div class="gray-bar">
            <div class="pull-left">
                <strong>
                    @item.FromUserFullName</strong> | <span>@item.Date</span>
            </div>
            <div class="clearfix"></div>
        </div>
        <p style="padding-top: 15px; line-height: 22px;">
            @item.Body
        </p>
        <hr>
    }

    <div style="padding-bottom: 10px;">
        <a id="replyButton" href="@Url.Action("ReplayMessage", "Message", new { conversationId = ViewBag.ConversationId })" style="text-decoration:none !important;">
            <i class="fa fa-reply"></i>@Resources.Message_MessageDetails_ReplyTo @ViewBag.RecipientName</a>
    </div>
    <div id="replyMessage" style="padding-bottom: 10px;"></div>
    <div class="clearfix"></div>
</div>







<script src="~/Scripts/customs/views/Message/MessageDetail.js"></script>
