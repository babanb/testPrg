@using ADOPets.Web.Common.Extensions
@using ADOPets.Web.Common.Helpers
@using Model
@using Resources = ADOPets.Web.Resources.Wording

@model ADOPets.Web.ViewModels.VideoGallery.IndexViewModel

<link href="../Content/css/jplayer.pink.flag.min.css" rel="stylesheet" type="text/css" />
<script type="text/javascript">

$(document).ready(function(){
    var videoData = $("#hdnVideoURL").val();
    var Videoimg = $("#hdnImageURL").val();
    

  	var p = Popcorn.jplayer('#jquery_jplayer_1', {
		media: {
			
			m4v: videoData,
			poster: Videoimg
		},
		options: {
		    swfPath: "../Content/css/jquery.jplayer.swf",
			supplied: "m4v",
			size: {
			    width: "100%",
			    height: "500",
				cssClass: "jp-video-400p"
			},
			useStateClassSkin: true,
			autoBlur: false,
			smoothPlayBar: true,
			keyEnabled: true
		}
	})
	

});

</script>
<div id="pageTitle">
    <div>
        <div class="col-md-3">
            <h1>@Model.PetName</h1>
        </div>
       <div class="col-md-9">
            <a href="@Url.Action("Index", "Pet")" class="btn btn-primary pull-right" style="margin-right:10px;"><i class="fa fa-angle-left"></i>@Resources.SharePetInfo_MyContact_Back</a>
        </div>
    </div>
</div>
<div id="mainContainer">
    
    @if (ViewBag.First)
    {
        <div id="galleryPrebtn" style="top: 315px;"><i class="fa fa-angle-left"></i></div>
    }
    else
    {
        <a  href="javascript:void(0);" onclick="prevImage(this);" data-href="@Url.Action("PrevNextImage", "VideoGallery", new { videoId = Model.VideoId, petId = Model.PetId, type = "prev" })" id="galleryPrebtn" style="top:315px;"><i class="fa fa-angle-left"></i></a>
    }
    @if (ViewBag.Last)
    {
        <div id="galleryNextbtn" style="top: 315px;"><i class="fa fa-angle-right"></i></div>
    }
    else
    {
        <a  href="javascript:void(0);" onclick="nextImage(this);" data-href="@Url.Action("PrevNextImage", "VideoGallery", new { videoId = Model.VideoId, petId = Model.PetId, type = "next" })" id="galleryNextbtn" style="top:315px;"><i class="fa fa-angle-right"></i></a>
    }
    <div>
        <input type="hidden" id="hdnVideoURL" value="@Model.VideoURL" />
        <input type="hidden" id="hdnImageURL" value="@Model.VideoImage" />
      
    
    <div id="jp_container_1" class="jp-video jp-video-360p" role="application" aria-label="media player">
	<div class="jp-type-single">
		<div id="jquery_jplayer_1" class="jp-jplayer"></div>
		<div class="jp-gui">
			<div class="jp-video-play">
				<button class="jp-video-play-icon" role="button" tabindex="0">play</button>
			</div>
			<div class="jp-interface">
				<div class="jp-progress">
					<div class="jp-seek-bar">
						<div class="jp-play-bar"></div>
					</div>
				</div>
				<div class="jp-current-time" role="timer" aria-label="time">&nbsp;</div>
				<div class="jp-duration" role="timer" aria-label="duration">&nbsp;</div>
				<div class="jp-details">
					<div class="jp-title" aria-label="title">&nbsp;</div>
				</div>
				<div class="jp-controls-holder">
					<div class="jp-volume-controls">
						<button class="jp-mute" role="button" tabindex="0">mute</button>
						<button class="jp-volume-max" role="button" tabindex="0">max volume</button>
						<div class="jp-volume-bar">
							<div class="jp-volume-bar-value"></div>
						</div>
					</div>
					<div class="jp-controls">
						<button class="jp-play" role="button" tabindex="0">play</button>
						<button class="jp-stop" role="button" tabindex="0">stop</button>
					</div>
					<div class="jp-toggles">
						<button class="jp-repeat" role="button" tabindex="0">repeat</button>
						<button class="jp-full-screen" role="button" tabindex="0">full screen</button>
					</div>
				</div>
			</div>
		</div>
		<div class="jp-no-solution">
			<span>Update Required</span>
			To play the media you will need to either update your browser to a recent version or update your <a href="http://get.adobe.com/flashplayer/" target="_blank">Flash plugin</a>.
		</div>
	</div>
</div>
            <h3 class="pull-left">@Model.Title</h3>
            <div class="pull-right" style="margin: 20px 0;">
                <button type="button" class="btn btn-primary" onclick="AddLikes('@Model.VideoId','3','0');"><i class="fa fa-thumbs-o-up"></i><span id="spanlikes">@ViewBag.Likes</span></button>
                <button type="button" class="btn btn-primary"><i class="fa fa-comments"></i><span id="spanComments">@ViewBag.Comments</span></button>
                <div id="sharemediaPerent">
                    <button type="button" class="btn btn-primary" id="sharemedia"><i class="fa fa-share-alt-square"></i>Share</button>
                    <div id="sharebtbx" class="animated fadeIn">
                        <div class="popover top">
                            <div class="arrow"></div>
                            <div class="popover-content">
                                <a href="https://www.facebook.com/sharer/sharer.php?u=@Model.ShareUrl&t=@Model.Title" target="_blank" style="color: #3b5998;" data-toggle="tooltip" data-placement="top" data-original-title="Facebook"><i class="fa fa-facebook-square"></i></a>
                                <a href="https://twitter.com/intent/tweet?url=@Model.ShareUrl" target="_blank" style="color: #1dcaff;" data-toggle="tooltip" data-placement="top" data-original-title="Twitter"><i class="fa fa-twitter-square"></i></a>
                                <a href="http://www.linkedin.com/shareArticle?mini=true&url=@Model.ShareUrl&title=@Model.Title&source=none" target="_blank" style="color: #007bb6;" data-toggle="tooltip" data-placement="top" data-original-title="Linkedin"><i class="fa fa-linkedin-square"></i></a>
                                <a href="https://plus.google.com/share?url=@Model.ShareUrl" target="_blank" style="color: #d34836;" data-toggle="tooltip" data-placement="top" data-original-title="Google+"><i class="fa fa-google-plus-square"></i></a>
                                <div class="clearfix"></div>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="well well-sm"><i class="fa fa-comment"></i>@Resources.Comment_RecentComments<span id="spanCommentsbadge" class="badge">@ViewBag.Comments</span></div>
            <textarea id="varComment" class="form-control" rows="3" placeholder="@Resources.Gallery_Comment_Placeholder"></textarea><br>
            <button type="button" onclick="CancelComment();" class="btn btn-default">@Resources.Comment_Cancel</button>
            <button type="button" onclick="AddComments('@Model.VideoId','3','0');" class="btn btn-success">@Resources.Comment_AddComments</button>
            <hr>
            <div id="divComments">
                @{
                    Html.RenderAction("ShowComments", "GalleryComment", new { imageid = Model.VideoId, type = 3 });
                }
            </div>
            <br>
        </div>
    </div>

<script src="@Url.Content("~/Scripts/customs/views/GalleryComment/LoadComments.js")"></script>
<script src="@Url.Content("~/Scripts/customs/views/GalleryComment/GalleryComments.js")"></script>

<script src="@Url.Content("~/Scripts/external/jquery.jplayer.min.js")"></script>

<script src="@Url.Content("~/Scripts/external/popcorn.ie8.js")"></script>
<script src="@Url.Content("~/Scripts/external/popcorn.js")"></script>
<script src="@Url.Content("~/Scripts/external/popcorn.player.js")"></script>
<script src="@Url.Content("~/Scripts/external/popcorn.jplayer.min.js")"></script>
<script src="@Url.Content("~/Scripts/external/popcorn.subtitle.js")"></script>



